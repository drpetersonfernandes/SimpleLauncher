@page
@model SimpleLauncher.AdminAPI.Pages.Admin.Systems.EditModel

@{
    ViewData["Title"] = "Edit System Configuration";
    Layout = "/Pages/Admin/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<!-- Navigation Buttons -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        @if (Model.PreviousId.HasValue)
        {
            <a asp-page="./Edit" asp-route-id="@Model.PreviousId" class="btn btn-outline-primary btn-sm">
                <i class="bi bi-chevron-left"></i> @Model.PreviousName
            </a>
        }
    </div>
    <div>
        @if (Model.NextId.HasValue)
        {
            <a asp-page="./Edit" asp-route-id="@Model.NextId" class="btn btn-outline-primary btn-sm">
                @Model.NextName <i class="bi bi-chevron-right"></i>
            </a>
        }
    </div>
</div>

<hr />
<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SystemConfiguration!.Id" />
            <input type="hidden" asp-for="EmulatorConfiguration.Id" />
            <input type="hidden" asp-for="EmulatorConfiguration.SystemConfigurationId" />

            <h4>System Details</h4>
            <div class="form-group mb-2">
                <label asp-for="SystemConfiguration!.SystemName" class="control-label"></label>
                <input asp-for="SystemConfiguration!.SystemName" class="form-control" />
                <span asp-validation-for="SystemConfiguration!.SystemName" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="SystemConfiguration!.Architecture" class="control-label"></label>
                <select asp-for="SystemConfiguration!.Architecture" class="form-control">
                    <option value="x64">x64</option>
                    <option value="arm64">arm64</option>
                </select>
                <span asp-validation-for="SystemConfiguration!.Architecture" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="SystemConfiguration!.SystemFolder" class="control-label"></label>
                <input asp-for="SystemConfiguration!.SystemFolder" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="SystemConfiguration!.SystemImageFolder" class="control-label"></label>
                <input asp-for="SystemConfiguration!.SystemImageFolder" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="FileFormatsToSearchString" class="control-label">File Formats to Search (comma-separated)</label>
                <input asp-for="FileFormatsToSearchString" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="FileFormatsToLaunchString" class="control-label">File Formats to Launch (comma-separated)</label>
                <input asp-for="FileFormatsToLaunchString" class="form-control" />
            </div>
            <div class="form-group form-check mb-2">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="SystemConfiguration!.SystemIsMame" /> @Html.DisplayNameFor(model => model.SystemConfiguration!.SystemIsMame)
                </label>
            </div>
            <div class="form-group form-check mb-2">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="SystemConfiguration!.ExtractFileBeforeLaunch" /> @Html.DisplayNameFor(model => model.SystemConfiguration!.ExtractFileBeforeLaunch)
                </label>
            </div>

            <hr />
            <h4>Emulator Details</h4>
            <div class="form-group mb-2">
                <label asp-for="EmulatorConfiguration.EmulatorName" class="control-label"></label>
                <input asp-for="EmulatorConfiguration.EmulatorName" class="form-control" />
                <span asp-validation-for="EmulatorConfiguration.EmulatorName" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="EmulatorConfiguration.EmulatorLocation" class="control-label"></label>
                <input asp-for="EmulatorConfiguration.EmulatorLocation" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="EmulatorConfiguration.EmulatorParameters" class="control-label"></label>
                <input asp-for="EmulatorConfiguration.EmulatorParameters" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="EmulatorConfiguration.EmulatorDownloadPage" class="control-label"></label>
                <input asp-for="EmulatorConfiguration.EmulatorDownloadPage" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="EmulatorConfiguration.EmulatorLatestVersion" class="control-label"></label>
                <input asp-for="EmulatorConfiguration.EmulatorLatestVersion" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="EmulatorConfiguration.EmulatorDownloadLink" class="control-label"></label>
                <input asp-for="EmulatorConfiguration.EmulatorDownloadLink" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="EmulatorConfiguration.EmulatorDownloadExtractPath" class="control-label"></label>
                <input asp-for="EmulatorConfiguration.EmulatorDownloadExtractPath" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="EmulatorConfiguration.CoreLocation" class="control-label"></label>
                <input asp-for="EmulatorConfiguration.CoreLocation" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="EmulatorConfiguration.CoreLatestVersion" class="control-label"></label>
                <input asp-for="EmulatorConfiguration.CoreLatestVersion" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="EmulatorConfiguration.CoreDownloadLink" class="control-label"></label>
                <input asp-for="EmulatorConfiguration.CoreDownloadLink" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="EmulatorConfiguration.CoreDownloadExtractPath" class="control-label"></label>
                <input asp-for="EmulatorConfiguration.CoreDownloadExtractPath" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="EmulatorConfiguration.ImagePackDownloadLink" class="control-label"></label>
                <input asp-for="EmulatorConfiguration.ImagePackDownloadLink" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="EmulatorConfiguration.ImagePackDownloadLink2" class="control-label"></label>
                <input asp-for="EmulatorConfiguration.ImagePackDownloadLink2" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="EmulatorConfiguration.ImagePackDownloadLink3" class="control-label"></label>
                <input asp-for="EmulatorConfiguration.ImagePackDownloadLink3" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="EmulatorConfiguration.ImagePackDownloadLink4" class="control-label"></label>
                <input asp-for="EmulatorConfiguration.ImagePackDownloadLink4" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="EmulatorConfiguration.ImagePackDownloadLink5" class="control-label"></label>
                <input asp-for="EmulatorConfiguration.ImagePackDownloadLink5" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="EmulatorConfiguration.ImagePackDownloadExtractPath" class="control-label"></label>
                <input asp-for="EmulatorConfiguration.ImagePackDownloadExtractPath" class="form-control" />
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="/Pages/Admin/Shared/_ValidationScriptsPartial.cshtml" />
}