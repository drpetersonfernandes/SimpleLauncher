@page
@model SimpleLauncher.AdminAPI.Pages.Admin.Systems.ImportModel

@{
    ViewData["Title"] = "Import Systems from XML";
    Layout = "/Pages/Admin/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Architecture" class="control-label"></label>
                <select asp-for="Architecture" class="form-control">
                    <option value="x64">x64 (Standard)</option>
                    <option value="arm64">arm64</option>
                </select>
                <span asp-validation-for="Architecture" class="text-danger"></span>
                <small class="form-text text-muted">Select the architecture that corresponds to the XML file (e.g., 'x64' for easymode.xml, 'arm64' for easymode_arm64.xml).</small>
            </div>

            <div class="form-group mb-3">
                <label asp-for="XmlFile" class="control-label">XML File</label>
                <input asp-for="XmlFile" type="file" class="form-control" accept=".xml" />
                <span asp-validation-for="XmlFile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Import" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="/Pages/Admin/Shared/_ValidationScriptsPartial.cshtml" />
}