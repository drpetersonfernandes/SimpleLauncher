<controls:MetroWindow x:Class="SimpleLauncher.SetGamepadDeadZoneWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      Title="{DynamicResource SetGamepadDeadZone}"
                      Width="600"
                      Height="480"
                      ResizeMode="CanResize"
                      WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- Explanation -->
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Margin="10,20,10,10"
            Text="{DynamicResource YouCanDefineCustomGamepadDeadZone}"
            TextWrapping="Wrap"
            HorizontalAlignment="Left"
            TextAlignment="Justify" />

        <!-- Dead Zone Explanation -->
        <GroupBox 
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Margin="10,0,10,10"
            Header="{DynamicResource DeadZoneExplanationTitle}">
            <StackPanel>
                <TextBlock
                    Text="{DynamicResource DeadZoneExplanationContent}"
                    TextWrapping="Wrap"
                    TextAlignment="Left"
                    Margin="5"/>
                <TextBlock
                    Text="{DynamicResource Highervalueslargerdeadzone}"
                    TextWrapping="Wrap"
                    TextAlignment="Left"
                    Margin="5"/>
                <TextBlock
                    Text="{DynamicResource Lowervaluessmallerdeadzone}"
                    TextWrapping="Wrap"
                    TextAlignment="Left"
                    Margin="5" />
                <TextBlock
                    Text="{DynamicResource Settingittoolowmay}"
                    TextWrapping="Wrap"
                    TextAlignment="Left"
                    Margin="5" />
                <TextBlock
                    Text="{DynamicResource Settingittoohighmay}"
                    TextWrapping="Wrap"
                    TextAlignment="Left"
                    Margin="5" />
            </StackPanel>
        </GroupBox>

        <!-- DeadZoneX -->
        <Label
            Margin="10"
            Grid.Row="2"
            Grid.Column="0"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Content="{DynamicResource DeadZoneX}" />
        <Slider
            x:Name="DeadZoneXSlider"
            Margin="10"
            Grid.Row="2"
            Grid.Column="1"
            Width="150"
            Minimum="0"
            Maximum="0.3"
            SmallChange="0.01"
            LargeChange="0.05"
            TickFrequency="0.01"
            HorizontalAlignment="Center"
            IsSnapToTickEnabled="True" />
        <TextBlock
            Margin="10"
            Grid.Row="2"
            Grid.Column="2"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Text="{Binding ElementName=DeadZoneXSlider, Path=Value, StringFormat={}{0:F2}}" />

        <!-- DeadZoneY -->
        <Label
            Margin="10"
            Grid.Row="3"
            Grid.Column="0"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Content="{DynamicResource DeadZoneY}" />
        <Slider
            x:Name="DeadZoneYSlider"
            Margin="10"
            Grid.Row="3"
            Grid.Column="1"
            Width="150"
            Minimum="0"
            Maximum="0.3"
            SmallChange="0.01"
            LargeChange="0.05"
            TickFrequency="0.01"
            HorizontalAlignment="Center"
            IsSnapToTickEnabled="True" />
        <TextBlock
            Margin="10"
            Grid.Row="3"
            Grid.Column="2"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Text="{Binding ElementName=DeadZoneYSlider, Path=Value, StringFormat={}{0:F2}}" />

        <Grid 
            Grid.Row="4"
            Grid.Column="0" Grid.ColumnSpan="3">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- Save Button -->
                <Button
                    Style="{DynamicResource MahApps.Styles.Button.Square.Accent}"
                    Margin="0,20,5,10"
                    Padding="10"
                    Click="SaveDeadZoneButton_Click"
                    Content="{DynamicResource SaveDeadZone}" />

                <!-- Revert Button -->
                <Button
                    Style="{DynamicResource MahApps.Styles.Button.Square}"
                    Margin="5,20,0,10"
                    Padding="10"
                    Click="RevertDeadZoneButton_Click"
                    Content="{DynamicResource ReverttoDefaultValues}" />
            </StackPanel>
        </Grid>

    </Grid>
</controls:MetroWindow>