<controls:MetroWindow x:Class="SimpleLauncher.InjectPcsx2ConfigWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      Title="{DynamicResource Pcsx2Config_Title}"
                      Height="700" Width="700"
                      ResizeMode="CanResize"
                      WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Video Section -->
                <GroupBox Header="{DynamicResource Pcsx2Config_Video_Header}" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="{DynamicResource Pcsx2Config_Renderer_Label}" VerticalAlignment="Center"/>
                            <ComboBox x:Name="CmbRenderer" Grid.Column="1" ToolTip="{DynamicResource Pcsx2Config_Renderer_Tooltip}">
                                <ComboBoxItem Content="Vulkan" Tag="14"/>
                                <ComboBoxItem Content="Direct3D 12" Tag="13"/>
                                <ComboBoxItem Content="Direct3D 11" Tag="12"/>
                                <ComboBoxItem Content="OpenGL" Tag="15"/>
                                <ComboBoxItem Content="Software" Tag="11"/>
                            </ComboBox>
                        </Grid>
                        <Grid Margin="0,5,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="{DynamicResource Pcsx2Config_Upscale_Label}" VerticalAlignment="Center"/>
                            <ComboBox x:Name="CmbUpscale" Grid.Column="1" ToolTip="{DynamicResource Pcsx2Config_Upscale_Tooltip}">
                                <ComboBoxItem Content="Native (PS2)" Tag="1"/>
                                <ComboBoxItem Content="2x (720p)" Tag="2"/>
                                <ComboBoxItem Content="3x (1080p)" Tag="3"/>
                                <ComboBoxItem Content="4x (1440p)" Tag="4"/>
                                <ComboBoxItem Content="5x (3K)" Tag="5"/>
                                <ComboBoxItem Content="6x (4K)" Tag="6"/>
                                <ComboBoxItem Content="8x (5K+)" Tag="8"/>
                            </ComboBox>
                        </Grid>
                        <Grid Margin="0,5,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="{DynamicResource Pcsx2Config_Aspect_Label}" VerticalAlignment="Center"/>
                            <ComboBox x:Name="CmbAspect" Grid.Column="1" ToolTip="{DynamicResource Pcsx2Config_Aspect_Tooltip}">
                                <ComboBoxItem Content="4:3"/>
                                <ComboBoxItem Content="16:9"/>
                                <ComboBoxItem Content="Stretch"/>
                            </ComboBox>
                        </Grid>
                        <CheckBox x:Name="ChkVsync" Content="{DynamicResource Pcsx2Config_Vsync_Checkbox}" Margin="0,5" ToolTip="{DynamicResource Pcsx2Config_Vsync_Tooltip}"/>
                        <CheckBox x:Name="ChkWidescreenPatches" Content="{DynamicResource Pcsx2Config_WidescreenPatches_Checkbox}" Margin="0,5" ToolTip="{DynamicResource Pcsx2Config_WidescreenPatches_Tooltip}"/>
                    </StackPanel>
                </GroupBox>

                <!-- General Section -->
                <GroupBox Header="{DynamicResource Pcsx2Config_General_Header}" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <CheckBox x:Name="ChkFullscreen" Content="{DynamicResource Pcsx2Config_Fullscreen_Checkbox}" Margin="0,5" ToolTip="{DynamicResource Pcsx2Config_Fullscreen_Tooltip}"/>
                        <CheckBox x:Name="ChkCheats" Content="{DynamicResource Pcsx2Config_Cheats_Checkbox}" Margin="0,5" ToolTip="{DynamicResource Pcsx2Config_Cheats_Tooltip}"/>
                        <Label Content="{DynamicResource Pcsx2Config_Volume_Label}" VerticalAlignment="Center"/>
                        <Slider x:Name="SldVolume" Minimum="0" Maximum="100" IsSnapToTickEnabled="True" TickFrequency="1" ToolTip="{DynamicResource Pcsx2Config_Volume_Tooltip}"/>
                    </StackPanel>
                </GroupBox>

                <!-- Achievements Section -->
                <GroupBox Header="{DynamicResource Pcsx2Config_Achievements_Header}" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <CheckBox x:Name="ChkAchEnabled" Content="{DynamicResource Pcsx2Config_AchEnabled_Checkbox}" Margin="0,5" ToolTip="{DynamicResource Pcsx2Config_AchEnabled_Tooltip}"/>
                        <CheckBox x:Name="ChkAchHardcore" Content="{DynamicResource Pcsx2Config_AchHardcore_Checkbox}" Margin="0,5" ToolTip="{DynamicResource Pcsx2Config_AchHardcore_Tooltip}"/>
                    </StackPanel>
                </GroupBox>

                <CheckBox x:Name="ChkShowBeforeLaunch" 
                          Content="{DynamicResource Pcsx2Config_ShowBeforeLaunch_Checkbox}" 
                          Margin="5,10,0,10" />
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="BtnSave" Content="{DynamicResource Pcsx2Config_Save_Button}" Width="100" Height="35" Margin="0,0,10,0"
                    Style="{DynamicResource MahApps.Styles.Button.Square}" Click="BtnSave_Click"/>
            <Button x:Name="BtnRun" Content="{DynamicResource Pcsx2Config_Run_Button}" Width="120" Height="35" 
                    Style="{DynamicResource MahApps.Styles.Button.Square.Accent}" Click="BtnRun_Click" IsDefault="True"/>
            <Button Content="{DynamicResource Pcsx2Config_Cancel_Button}" Width="100" Height="35" Margin="10,0,0,0" IsCancel="True"/>
        </StackPanel>
    </Grid>
</controls:MetroWindow>
