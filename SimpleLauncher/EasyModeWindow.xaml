<controls:MetroWindow x:Class="SimpleLauncher.EasyModeWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      mc:Ignorable="d"
                      Title="{DynamicResource AddNewSystem}"
                      Width="900"
                      MinWidth="700"
                      Height="610"
                      MinHeight="550"
                      WindowStartupLocation="CenterScreen"
                      DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!-- Header Text -->
            <RowDefinition Height="*" />    <!-- Main Content -->
            <RowDefinition Height="Auto" /> <!-- Footer / Progress -->
        </Grid.RowDefinitions>

        <!-- 1. Header Section -->
        <StackPanel Grid.Row="0" Margin="20,20,20,10">
            <TextBlock Text="{DynamicResource AddNewSystem}" FontSize="24" FontWeight="Light" Margin="0,0,0,10" />
            <TextBlock Text="{DynamicResource InThisWindowYouCanDownload}" TextWrapping="Wrap" Opacity="0.7" />
            <TextBlock Text="{DynamicResource WeAlsoSupportSystems}" TextWrapping="Wrap" Opacity="0.7" Margin="0,5,0,0" />
        </StackPanel>

        <!-- 2. Main Content (Two Columns) -->
        <Grid Grid.Row="1" Margin="20,10,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="20" /> <!-- Spacer -->
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left Column: Configuration -->
            <StackPanel Grid.Column="0">
                <controls:MetroHeader Header="{DynamicResource ChooseASystemToAdd}" Margin="0,0,0,20">
                    <ComboBox x:Name="SystemNameDropdown"
                              HorizontalAlignment="Stretch"
                              Margin="0,5,0,0"
                              SelectionChanged="SystemNameDropdown_SelectionChanged"
                              controls:TextBoxHelper.Watermark="Select a system..." />
                </controls:MetroHeader>

                <controls:MetroHeader Header="{DynamicResource ChooseFolderWithROMsOrIsos}" Margin="0,0,0,20">
                    <StackPanel Margin="0,5,0,0">
                        <TextBlock Text="{DynamicResource Ifyouleaveitempty}"
                                   TextWrapping="Wrap" FontSize="12" Opacity="0.6" Margin="0,0,0,5" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" x:Name="SystemFolderTextBox"
                                     VerticalContentAlignment="Center"
                                     controls:TextBoxHelper.Watermark="Path to ROMs..." />
                            <Button Grid.Column="1" Content="..."
                                    ToolTip="{DynamicResource ChooseFolder}"
                                    Click="ChooseFolderButton_Click"
                                    Margin="5,0,0,0" Width="40" />
                        </Grid>
                    </StackPanel>
                </controls:MetroHeader>

                <!-- Links Section -->
                <StackPanel Margin="0,20,0,0">
                    <TextBlock Text="Resources:" FontWeight="SemiBold" Margin="0,0,0,10" />
                    <TextBlock Text="{DynamicResource IncasetheImagePackisnotavailable}"
                               TextWrapping="Wrap" FontSize="11" Opacity="0.6" Margin="0,0,0,5" />
                    <TextBlock Margin="0,0,0,5">
                        <Hyperlink NavigateUri="https://github.com/libretro-thumbnails/libretro-thumbnails" RequestNavigate="Hyperlink_RequestNavigate">
                            Libretro Thumbnails (GitHub)
                        </Hyperlink>
                    </TextBlock>
                    <TextBlock>
                        <Hyperlink NavigateUri="https://emumovies.com/files/" RequestNavigate="Hyperlink_RequestNavigate">
                            EmuMovies Files
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </StackPanel>

            <!-- Right Column: Downloads -->
            <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <controls:MetroHeader Header="{DynamicResource Install}" Margin="0,0,0,10" />

                    <!-- Essential Components -->
                    <GroupBox Header="Essentials" Margin="0,0,0,15">
                        <UniformGrid Columns="2" Rows="1" Margin="5">
                            <Button x:Name="DownloadEmulatorButton"
                                    Content="{DynamicResource DownloadEmulator}"
                                    Click="DownloadEmulatorButton_Click"
                                    IsEnabled="{Binding IsEmulatorDownloaded, Converter={StaticResource InverseBooleanConverter}}"
                                    Margin="5" Padding="10" />

                            <Button x:Name="DownloadCoreButton"
                                    Content="{DynamicResource DownloadCore}"
                                    Click="DownloadCoreButton_Click"
                                    IsEnabled="{Binding IsCoreDownloaded, Converter={StaticResource InverseBooleanConverter}}"
                                    Margin="5" Padding="10" />
                        </UniformGrid>
                    </GroupBox>

                    <!-- Optional Image Packs -->
                    <GroupBox Header="Image Packs (Optional)" Margin="0,0,0,15">
                        <StackPanel Margin="5">

                            <UniformGrid Columns="2">
                                <Button x:Name="DownloadImagePackButton1" Content="{DynamicResource DownloadImagePack1}"
                                        Click="DownloadImagePackButton1_Click"
                                        IsEnabled="{Binding IsImagePack1Downloaded, Converter={StaticResource InverseBooleanConverter}}"
                                        Visibility="{Binding IsImagePack1Available, Converter={StaticResource BooleanToVisibilityConverter}}"
                                        Margin="5" />

                                <Button x:Name="DownloadImagePackButton2" Content="{DynamicResource DownloadImagePack2}"
                                        Click="DownloadImagePackButton2_Click"
                                        IsEnabled="{Binding IsImagePack2Downloaded, Converter={StaticResource InverseBooleanConverter}}"
                                        Visibility="{Binding IsImagePack2Available, Converter={StaticResource BooleanToVisibilityConverter}}"
                                        Margin="5" />

                                <Button x:Name="DownloadImagePackButton3" Content="{DynamicResource DownloadImagePack3}"
                                        Click="DownloadImagePackButton3_Click"
                                        IsEnabled="{Binding IsImagePack3Downloaded, Converter={StaticResource InverseBooleanConverter}}"
                                        Visibility="{Binding IsImagePack3Available, Converter={StaticResource BooleanToVisibilityConverter}}"
                                        Margin="5" />

                                <Button x:Name="DownloadImagePackButton4" Content="{DynamicResource DownloadImagePack4}"
                                        Click="DownloadImagePackButton4_Click"
                                        IsEnabled="{Binding IsImagePack4Downloaded, Converter={StaticResource InverseBooleanConverter}}"
                                        Visibility="{Binding IsImagePack4Available, Converter={StaticResource BooleanToVisibilityConverter}}"
                                        Margin="5" />

                                <Button x:Name="DownloadImagePackButton5" Content="{DynamicResource DownloadImagePack5}"
                                        Click="DownloadImagePackButton5_Click"
                                        IsEnabled="{Binding IsImagePack5Downloaded, Converter={StaticResource InverseBooleanConverter}}"
                                        Visibility="{Binding IsImagePack5Available, Converter={StaticResource BooleanToVisibilityConverter}}"
                                        Margin="5" />
                            </UniformGrid>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- 3. Footer: Progress & Final Action -->
        <Border Grid.Row="2" BorderBrush="{DynamicResource MahApps.Brushes.Gray7}" BorderThickness="0,1,0,0" Background="{DynamicResource MahApps.Brushes.Gray10}" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Progress Info -->
                <Grid Grid.Column="0" Margin="0,0,20,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid>
                        <ProgressBar x:Name="DownloadProgressBar" Height="20" />
                        <TextBlock Text="{DynamicResource DownloadProgress}"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Foreground="{DynamicResource MahApps.Brushes.Text}"
                                   FontSize="10" />
                    </Grid>

                    <DockPanel Grid.Row="1" Margin="0,5,0,0">
                        <Button x:Name="StopDownloadButton" Content="{DynamicResource StopDownload}"
                                DockPanel.Dock="Right" Margin="10,0,0,0" Padding="10,2"
                                Click="StopDownloadButton_Click" IsEnabled="False"
                                Style="{DynamicResource MahApps.Styles.Button.Square}" />
                        <TextBlock x:Name="DownloadStatusTextBlock"
                                   TextWrapping="Wrap"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold" />
                    </DockPanel>
                </Grid>

                <!-- Main Action Button -->
                <Button Grid.Column="1" x:Name="AddSystemButton"
                        Content="{DynamicResource AddSystem}"
                        Click="AddSystemButton_Click"
                        IsEnabled="False"
                        Style="{DynamicResource MahApps.Styles.Button.Square.Accent}"
                        FontSize="16" FontWeight="Bold"
                        Padding="30,10" />
            </Grid>
        </Border>

        <!-- Loading Overlay (Unchanged) -->
        <Grid x:Name="LoadingOverlay" Grid.Row="0" Grid.RowSpan="3" Background="#7F000000" Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <controls:ProgressRing IsActive="True" Width="60" Height="60" />
                <TextBlock x:Name="LoadingMessage" Text="Processing..." Foreground="White" Margin="0,10,0,0" FontSize="16" />
            </StackPanel>
        </Grid>
    </Grid>

</controls:MetroWindow>