<controls:MetroWindow x:Class="SimpleLauncher.DownloadImagePackWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
                      Title="{DynamicResource DownloadImagePack}"
                      Width="650"
                      MinWidth="550"
                      Height="600"
                      MinHeight="500"
                      WindowStartupLocation="CenterScreen" x:ClassModifier="internal">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!-- Header -->
            <RowDefinition Height="*" />    <!-- Main Content -->
            <RowDefinition Height="Auto" /> <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- 1. Header Section -->
        <StackPanel Grid.Row="0" Margin="20,20,20,10">
            <TextBlock Text="{DynamicResource DownloadImagePack}" FontSize="24" FontWeight="Light" Margin="0,0,0,10" />
            <TextBlock Text="{DynamicResource Downloadhighqualityartwork}" TextWrapping="Wrap" FontSize="12" Opacity="0.6" />
        </StackPanel>

        <!-- 2. Main Content -->
        <Grid x:Name="MainContentGrid" Grid.Row="1" Margin="20,10,20,10"
              IsEnabled="{Binding IsOperationInProgress, Converter={StaticResource InverseBooleanConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left Column: Selection & Info -->
            <StackPanel Grid.Column="0">
                <controls:MetroHeader Header="{DynamicResource PleaseselectanImagePack}" Margin="0,0,0,20">
                    <ComboBox x:Name="SystemNameDropdown"
                              HorizontalAlignment="Stretch"
                              Margin="0,5,0,0"
                              SelectionChanged="SystemNameDropdown_SelectionChanged"
                              controls:TextBoxHelper.Watermark="{DynamicResource SelectASystemWatermark}" />
                </controls:MetroHeader>

                <!-- Resources Links -->
                <StackPanel Margin="0,20,0,0">
                    <TextBlock Text="{DynamicResource Resources}" FontWeight="SemiBold" Margin="0,0,0,10" />
                    <TextBlock Text="{DynamicResource IncasetheImagePackisnotavailable}"
                               TextWrapping="Wrap" FontSize="12" Opacity="0.6" Margin="0,0,0,5" />

                    <TextBlock Margin="0,0,0,5">
                        <Hyperlink NavigateUri="https://github.com/libretro-thumbnails/libretro-thumbnails" RequestNavigate="Hyperlink_RequestNavigate">
                            Libretro Thumbnails (GitHub)
                        </Hyperlink>
                    </TextBlock>
                    <TextBlock>
                        <Hyperlink NavigateUri="https://emumovies.com/files/" RequestNavigate="Hyperlink_RequestNavigate">
                            EmuMovies Files
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </StackPanel>

            <!-- Right Column: Download Actions -->
            <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <controls:MetroHeader Header="{DynamicResource InstallImagePack}" Margin="0,0,0,10" />

                    <Border BorderBrush="{DynamicResource MahApps.Brushes.Gray7}" BorderThickness="1" CornerRadius="3" Padding="10">
                        <ItemsControl x:Name="ImagePacksItemsControl">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding DisplayName}"
                                            Height="40"
                                            Margin="5"
                                            Click="DownloadImagePackButtonClickAsync"
                                            IsEnabled="{Binding CanStartDownload}"
                                            Style="{DynamicResource MahApps.Styles.Button.Square.Accent}"
                                            d:DataContext="{d:DesignInstance }" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Border>

                    <TextBlock Text="{DynamicResource ImagePackSelectionHint}"
                               TextWrapping="Wrap" FontSize="11" Opacity="0.6" Margin="5,10,5,0" FontStyle="Italic" />
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- 3. Footer: Progress -->
        <Border Grid.Row="2" BorderBrush="{DynamicResource MahApps.Brushes.Gray7}" BorderThickness="0,1,0,0" Background="{DynamicResource MahApps.Brushes.Gray10}" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Progress Info -->
                <Grid Grid.Column="0" Margin="0,0,20,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid>
                        <ProgressBar x:Name="DownloadProgressBar" Height="20" />
                        <TextBlock Text="{DynamicResource DownloadProgress}"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Foreground="{DynamicResource MahApps.Brushes.Text}"
                                   FontSize="10" />
                    </Grid>

                    <DockPanel Grid.Row="1" Margin="0,5,0,0">
                        <TextBlock x:Name="StatusTextBlock"
                                   TextWrapping="Wrap"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold" />
                    </DockPanel>
                </Grid>

                <!-- Stop Button -->
                <Button Grid.Column="1" x:Name="StopDownloadButton"
                        Content="{DynamicResource StopDownload}"
                        Click="StopDownloadButton_Click"
                        IsEnabled="False"
                        Style="{DynamicResource MahApps.Styles.Button.Square}"
                        Padding="20,10" />
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <ContentControl x:Name="LoadingOverlay" 
                        Template="{StaticResource LoadingOverlayTemplate}" 
                        Visibility="Collapsed" 
                        Grid.Row="0" Grid.RowSpan="3" />
    </Grid>

</controls:MetroWindow>