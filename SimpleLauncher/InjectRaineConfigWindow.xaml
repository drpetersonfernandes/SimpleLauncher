<controls:MetroWindow x:Class="SimpleLauncher.InjectRaineConfigWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      Title="{DynamicResource RaineConfig_Title}"
                      Height="550" Width="600" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <GroupBox Header="{DynamicResource RaineConfig_Video_Header}" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <CheckBox x:Name="ChkFullscreen" Content="{DynamicResource RaineConfig_Fullscreen}" Margin="0,5"/>
                        <CheckBox x:Name="ChkFixAspect" Content="{DynamicResource RaineConfig_FixAspect}" Margin="0,5"/>
                        <CheckBox x:Name="ChkVsync" Content="{DynamicResource RaineConfig_Vsync}" Margin="0,5"/>
                        <Label Content="{DynamicResource RaineConfig_Resolution}"/>
                        <StackPanel Orientation="Horizontal">
                            <controls:NumericUpDown x:Name="NumResX" Width="120" Minimum="320" Maximum="7680"/>
                            <TextBlock Text=" x " VerticalAlignment="Center"/>
                            <controls:NumericUpDown x:Name="NumResY" Width="120" Minimum="240" Maximum="4320"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="{DynamicResource RaineConfig_Audio_Header}" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <Label Content="{DynamicResource RaineConfig_AudioDriver}"/>
                        <ComboBox x:Name="CmbAudioDriver">
                            <ComboBoxItem Content="directsound"/>
                            <ComboBoxItem Content="sdl"/>
                        </ComboBox>
                        <Label Content="{DynamicResource RaineConfig_SampleRate}" Margin="0,5,0,0"/>
                        <ComboBox x:Name="CmbSampleRate">
                            <ComboBoxItem Content="22050"/>
                            <ComboBoxItem Content="44100"/>
                            <ComboBoxItem Content="48000"/>
                        </ComboBox>
                    </StackPanel>
                </GroupBox>
                <CheckBox x:Name="ChkShowBeforeLaunch" Content="{DynamicResource RaineConfig_ShowBeforeLaunch}" Margin="5,10"/>
            </StackPanel>
        </ScrollViewer>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="BtnSave" Content="{DynamicResource Save}" Width="100" Click="BtnSave_Click" Margin="0,0,10,0" Style="{DynamicResource MahApps.Styles.Button.Square}"/>
            <Button x:Name="BtnRun" Content="{DynamicResource Run}" Width="100" Click="BtnRun_Click" Style="{DynamicResource MahApps.Styles.Button.Square.Accent}"/>
        </StackPanel>
    </Grid>
</controls:MetroWindow>