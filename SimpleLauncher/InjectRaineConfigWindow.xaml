<controls:MetroWindow x:Class="SimpleLauncher.InjectRaineConfigWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      Title="{DynamicResource RaineConfig_Title}"
                      Height="600" Width="650"
                      ResizeMode="CanResize"
                      WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Video Section -->
                <GroupBox Header="{DynamicResource RaineConfig_Video_Header}" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <CheckBox x:Name="ChkFullscreen" Content="{DynamicResource RaineConfig_Fullscreen}" Margin="0,5" />
                        <CheckBox x:Name="ChkFixAspect" Content="{DynamicResource RaineConfig_FixAspect}" Margin="0,5" />
                        <CheckBox x:Name="ChkVsync" Content="{DynamicResource RaineConfig_Vsync}" Margin="0,5" />

                        <Label Content="{DynamicResource RaineConfig_Resolution}" Margin="0,5,0,0" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <controls:NumericUpDown x:Name="NumResX" Grid.Column="0" Minimum="320" Maximum="7680" Interval="1" />
                            <TextBlock Text="x" Grid.Column="1" VerticalAlignment="Center" Margin="10,0" />
                            <controls:NumericUpDown x:Name="NumResY" Grid.Column="2" Minimum="240" Maximum="4320" Interval="1" />
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- Audio Section -->
                <GroupBox Header="{DynamicResource RaineConfig_Audio_Header}" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <Label Content="{DynamicResource RaineConfig_AudioDriver}" />
                        <ComboBox x:Name="CmbAudioDriver">
                            <ComboBoxItem Content="directsound" />
                            <ComboBoxItem Content="sdl" />
                        </ComboBox>

                        <Label Content="{DynamicResource RaineConfig_SampleRate}" Margin="0,5,0,0" />
                        <ComboBox x:Name="CmbSampleRate">
                            <ComboBoxItem Content="22050" />
                            <ComboBoxItem Content="44100" />
                            <ComboBoxItem Content="48000" />
                        </ComboBox>
                    </StackPanel>
                </GroupBox>

                <CheckBox x:Name="ChkShowBeforeLaunch"
                          Content="{DynamicResource RaineConfig_ShowBeforeLaunch}"
                          Margin="5,10,0,10" />
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="BtnSave" Content="{DynamicResource Save}" Width="100" Height="35" Margin="0,0,10,0"
                    Style="{DynamicResource MahApps.Styles.Button.Square}"
                    Click="BtnSave_Click" />
            <Button x:Name="BtnRun" Content="{DynamicResource Run}" Width="120" Height="35"
                    Style="{DynamicResource MahApps.Styles.Button.Square.Accent}"
                    Click="BtnRun_Click" IsDefault="True" />
            <Button Content="{DynamicResource Cancel}" Width="100" Height="35" Margin="10,0,0,0" IsCancel="True" />
        </StackPanel>
    </Grid>
</controls:MetroWindow>