<controls:MetroWindow x:Class="SimpleLauncher.PleaseWaitWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      Title="{DynamicResource PleaseWait}"
                      Width="300"
                      Height="140"
                      WindowStartupLocation="CenterScreen"
                      WindowStyle="None"
                      ResizeMode="NoResize"
                      ShowInTaskbar="False"
                      AllowsTransparency="True">

    <Border BorderBrush="Gray" BorderThickness="1">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="{DynamicResource Processingpleasewait}" HorizontalAlignment="Center" Margin="20" />
            <ProgressBar IsIndeterminate="True" Width="200" Margin="10" />
        </StackPanel>
    </Border>
</controls:MetroWindow>