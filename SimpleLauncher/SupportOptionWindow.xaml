<controls:MetroWindow x:Class="SimpleLauncher.SupportOptionWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      Title="{DynamicResource SupportOptions}"
                      Height="430"
                      Width="450"
                      ResizeMode="NoResize"
                      WindowStartupLocation="CenterScreen"
                      ShowMaxRestoreButton="False"
                      ShowMinButton="False">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Message Text -->
        <TextBlock Grid.Row="0" 
                   Text="{DynamicResource DoYouWantSupport}" 
                   TextWrapping="Wrap" 
                   FontSize="14" 
                   VerticalAlignment="Top" 
                   HorizontalAlignment="Center" 
                   TextAlignment="Center"
                   Margin="0,0,0,20"/>
        
        <!-- Message Text -->
        <TextBlock Grid.Row="1" 
                   Text="{DynamicResource YouCanHaveSupportFromMultipleAIProvidersOrFromTheDeveloper}" 
                   TextWrapping="Wrap" 
                   FontSize="14" 
                   VerticalAlignment="Top" 
                   HorizontalAlignment="Center" 
                   TextAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Ask Phind AI Button -->
        <Button Grid.Row="2" 
                Name="BtnAskPhind"
                Content="{DynamicResource AskAIPhindcom}" 
                Height="35" 
                Margin="0,0,0,10" 
                Click="BtnAskPhind_Click"
                ToolTip="Search for a solution using Phind (Developer focused AI)."/>
        
        <!-- Ask Perplexity AI Button -->
        <Button Grid.Row="3" 
                Name="BtnAskPerplexity"
                Content="{DynamicResource AskAIPerplexityai}" 
                Height="35" 
                Margin="0,0,0,10" 
                Click="BtnAskPerplexity_Click"
                ToolTip="Search for a solution using Perplexity AI."/>

        <!-- Ask You.com AI Button -->
        <Button Grid.Row="4" 
                Name="BtnAskYou"
                Content="{DynamicResource AskAIYoucom}" 
                Height="35" 
                Margin="0,0,0,10" 
                Click="BtnAskYou_Click"
                ToolTip="Search for a solution using You.com AI."/>
        
        <!-- Contact Developer Button -->
        <Button Grid.Row="5" 
                Name="BtnContactDeveloper"
                Content="{DynamicResource ContactDeveloper}" 
                Height="35" 
                Margin="0,0,0,10" 
                Click="BtnContactDeveloper_Click"
                ToolTip="Open the bug report form to send logs to the developer."/>

        <!-- Cancel Button -->
        <Button Grid.Row="6" 
                Name="BtnCancel"
                Content="{DynamicResource Cancel}" 
                Height="35" 
                Click="BtnCancel_Click" 
                IsCancel="True"/>
    </Grid>
</controls:MetroWindow>