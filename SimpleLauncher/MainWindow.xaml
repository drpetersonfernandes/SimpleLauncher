                </Grid>
            </Grid>

            <!-- Status Bar / Bottom Area -->
            <Grid Grid.Row="2" VerticalAlignment="Center" Margin="0,5,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center"
                            Margin="10,0,0,0"
                            Orientation="Horizontal">
                    <Label x:Name="StatusBarText" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="0">
                    <Button x:Name="PrevPageButton"
                            Margin="0"
                            ToolTip="{DynamicResource PreviousPage}"
                            Style="{StaticResource NavImageButton3DStyle}"
                            Click="PrevPageButtonClickAsync"
                            AutomationProperties.Name="{DynamicResource PreviousPage}">
                        <Image Source="pack://application:,,,/images/arrowleft.png"
                               Height="27"
                               Width="27" />
                    </Button>
                    <Button x:Name="NextPageButton"
                            Margin="10,0,0,0"
                            ToolTip="{DynamicResource NextPage}"
                            Style="{StaticResource NavImageButton3DStyle}"
                            Click="NextPageButtonClickAsync"
                            AutomationProperties.Name="{DynamicResource NextPage}">
                        <Image Source="pack://application:,,,/images/arrowright.png"
                               Height="27"
                               Width="27" />
                    </Button>
                    <Label
                        x:Name="TotalFilesLabel"
                        Margin="10,0,0,0"
                        Content=""
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        AutomationProperties.Name="{DynamicResource TotalFilesLabel}" />
                </StackPanel>
                <StackPanel Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center"
                            Margin="10,0,0,0"
                            Orientation="Horizontal">
                    <!-- System Info -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="5,0,15,0"
                                AutomationProperties.Name="{DynamicResource CurrentSystemInfo}">
                        <Image Source="pack://application:,,,/images/gamepad.png" Width="16" Height="16" VerticalAlignment="Center" Margin="0,0,5,0" />
                        <Label Content="{DynamicResource System}" VerticalAlignment="Center" Padding="0" />
                        <Label Content="{Binding SelectedSystem}" VerticalAlignment="Center" Padding="5,0,0,0" />
                    </StackPanel>
                    <!-- Playtime Info -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="5,0,10,0" AutomationProperties.Name="{DynamicResource TotalPlaytimeInfo}"
                                Visibility="{Binding IsPlayTimeVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Image Source="pack://application:,,,/images/playhistory.png" Width="16" Height="16" VerticalAlignment="Center" Margin="0,0,5,0" />
                        <Label Content="{DynamicResource Playtime}" VerticalAlignment="Center" Padding="0" />
                        <Label Content="{Binding PlayTime}" VerticalAlignment="Center" Padding="5,0,0,0" />
                    </StackPanel>
                    <!-- Dummy usage to suppress "Resource 'SystemButtonStyle' is never used" warning -->
                    <Button Style="{StaticResource SystemButtonStyle}" Visibility="Collapsed" Width="0" Height="0" />
                </StackPanel>

            </Grid>
        </Grid>

        <!-- Loading Overlay stays OUTSIDE MainContentGrid so it remains active -->
        <ContentControl x:Name="LoadingOverlay"
                        Grid.Row="0"
                        Panel.ZIndex="9999"
                        Template="{StaticResource LoadingOverlayTemplate}"
                        Visibility="Collapsed" />
    </Grid>
</controls:MetroWindow>