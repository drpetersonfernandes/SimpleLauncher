                <MenuItem Click="RomValidator_Click" Header="RomValidator">
                    <MenuItem.Icon>
                        <Image Source="pack://application:,,,/images/tools.png" Width="16" Height="16" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="{DynamicResource Donate}">
                <MenuItem Click="Donate_Click" Header="{DynamicResource Donate}">
                    <MenuItem.Icon>
                        <Image Source="pack://application:,,,/images/donate.png" Width="16" Height="16" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="{DynamicResource About}">
                <MenuItem Click="About_Click" Header="{DynamicResource About}">
                    <MenuItem.Icon>
                        <Image Source="pack://application:,,,/images/about.png" Width="16" Height="16" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Click="Support_Click" Header="{DynamicResource Support}">
                    <MenuItem.Icon>
                        <Image Source="pack://application:,,,/images/support.png" Width="16" Height="16" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="{DynamicResource Exit}">
                <MenuItem Click="Exit_Click" Header="{DynamicResource Exit}">
                    <MenuItem.Icon>
                        <Image Source="pack://application:,,,/images/exit.png" Width="16" Height="16" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>

        <!-- Everything below the Top Menu -->
        <Grid x:Name="MainContentGrid" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Left Navigation Panel -->
            <Border Grid.Column="0" Grid.Row="0" Grid.RowSpan="2"
                    VerticalAlignment="Top"
                    Width="53"
                    BorderThickness="1"
                    CornerRadius="5"
                    Margin="8,5,0,0"
                    BorderBrush="{DynamicResource MahApps.Brushes.Gray7}"
                    Background="{DynamicResource MahApps.Brushes.Gray9}">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center"
                            Margin="0">
                    <Button x:Name="NavRestartButton"
                            Style="{StaticResource NavImageButton3DStyle}"
                            ToolTip="{DynamicResource Restart}"
                            Click="NavRestartButton_Click"
                            Margin="0,10,2,5"> <!-- Overriding the default margin for the first button -->
                        <Image Source="pack://application:,,,/images/refresh.png" Width="22" Height="22" />
                    </Button>
                    <Button x:Name="NavGlobalSearchButton"
                            Style="{StaticResource NavImageButton3DStyle}"
                            ToolTip="{DynamicResource GlobalSearch}"
                            Click="NavGlobalSearchButton_Click">
                        <Image Source="pack://application:,,,/images/search2.png" Width="22" Height="22" />
                    </Button>
                    <Button x:Name="NavFavoritesButton"
                            Style="{StaticResource NavImageButton3DStyle}"
                            ToolTip="{DynamicResource Favorites}"
                            Click="NavFavoritesButton_Click">
                        <Image Source="pack://application:,,,/images/heart.png" Width="22" Height="22" />
                    </Button>
                    <Button x:Name="NavHistoryButton"
                            Style="{StaticResource NavImageButton3DStyle}"
                            ToolTip="{DynamicResource PlayHistory}"
                            Click="NavHistoryButton_Click">
                        <Image Source="pack://application:,,,/images/playhistory.png" Width="22" Height="22" />
                    </Button>
                    <Button x:Name="NavExpertModeButton"
                            Style="{StaticResource NavImageButton3DStyle}"
                            ToolTip="{DynamicResource EditSystem}"
                            Click="NavExpertModeButton_Click">
                        <Image Source="pack://application:,,,/images/settings.png" Width="22" Height="22" />
                    </Button>
                    <Button x:Name="ToggleViewMode"
                            Style="{StaticResource NavImageButton3DStyle}"
                            ToolTip="{DynamicResource ToggleViewMode}"
                            Click="NavToggleViewMode_Click">
                        <Image Source="pack://application:,,,/images/show.png" Width="22" Height="22" />
                    </Button>
                    <Button x:Name="ToggleButtonAspectRatio"
                            Style="{StaticResource NavImageButton3DStyle}"
                            ToolTip="{DynamicResource ToggleButtonAspectRatio}"
                            Click="NavToggleButtonAspectRatio_Click">
                        <Image Source="pack://application:,,,/images/aspectratio.png" Width="22" Height="22" />
                    </Button>
                    <Button x:Name="ZoomInButton"
                            Style="{StaticResource NavImageButton3DStyle}"
                            ToolTip="{DynamicResource ZoomIn}"
                            Click="NavZoomInButton_Click">
                        <Image Source="pack://application:,,,/images/zoom-in.png" Width="22" Height="22" />
                    </Button>
                    <Button x:Name="ZoomOutButton"
                            Style="{StaticResource NavImageButton3DStyle}"
                            ToolTip="{DynamicResource ZoomOut}"
                            Click="NavZoomOutButton_Click"
                            Margin="0,5,2,10"> <!-- Overriding the default margin for the last button -->
                        <Image Source="pack://application:,,,/images/zoom-out.png" Width="22" Height="22" />
                    </Button>
                </StackPanel>
            </Border>

            <!-- Main Panel -->
            <Border Grid.Row="0" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left"
                    BorderThickness="1"
                    Margin="10,5,0,0"
                    Padding="5"
                    BorderBrush="{DynamicResource MahApps.Brushes.Gray7}"
                    Background="{DynamicResource MahApps.Brushes.Gray9}"
                    CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel x:Name="LetterNumberMenu"
                                Grid.Row="0"
                                Grid.Column="0"
                                Grid.ColumnSpan="5"
                                Margin="0,5,0,0"
                                Orientation="Horizontal">
                        <!-- Buttons for LetterNumberMenu will be added here programmatically -->
                    </StackPanel>
                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,10,0,0"
                        VerticalAlignment="Center"
                        Content="{DynamicResource SelectSystem}" />
                    <ComboBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="5,10,0,0"
                        Name="SystemComboBox"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        SelectionChanged="SystemComboBox_SelectionChanged" />

                    <StackPanel x:Name="SearchSystem"
                                Grid.Row="1"
                                Grid.RowSpan="2"
                                Grid.Column="2"
                                Margin="10,10,0,0"
                                Orientation="Horizontal">
                        <TextBox x:Name="SearchTextBox"
                                 Width="200"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 KeyDown="SearchTextBox_KeyDown" />
                        <Button x:Name="SearchButton"
                                Style="{StaticResource NavImageButton3DStyle}"
                                Click="SearchButton_Click"
                                Margin="10,0,0,0"
                                ToolTip="{DynamicResource Search}">
                            <Image Source="pack://application:,,,/images/search3.png"
                                   Width="22"
                                   Height="22" />
                        </Button>
                    </StackPanel>

                    <Label
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="0,5,0,0"
                        VerticalAlignment="Center"
                        Content="{DynamicResource SelectEmulator}" />
                    <ComboBox
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="5,5,0,0"
                        Name="EmulatorComboBox"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center" />

                    <Button
                        x:Name="SelectedSystemFavoriteButton"
                        Style="{StaticResource NavImageButton3DStyle}"
                        Grid.Row="1"
                        Grid.RowSpan="2"
                        Grid.Column="3"
                        ToolTip="{DynamicResource SelectedSystemFavoriteButton}"
                        Click="NavSelectedSystemFavoriteButton_Click"
                        Margin="10,10,0,0">
                        <Image Source="pack://application:,,,/images/star.png" Width="22" Height="22" />
                    </Button>
                    <Button
                        Grid.Row="1"
                        Grid.RowSpan="2"
                        Grid.Column="4"
                        x:Name="RandomLuckGameButton"
                        Style="{StaticResource NavImageButton3DStyle}"
                        ToolTip="{DynamicResource FeelingLucky}"
                        Click="NavRandomLuckGameButton_Click"
                        Margin="10,10,2,0">
                        <Image Source="pack://application:,,,/images/dice.png" Width="22" Height="22" />
                    </Button>
                </Grid>
            </Border>

            <ScrollViewer x:Name="Scroller" Grid.Row="1" Grid.Column="1" VerticalScrollBarVisibility="Visible"
                          Margin="5,5,5,0">
                <WrapPanel x:Name="GameFileGrid" Orientation="Horizontal" Margin="0">
                    <!-- Game buttons will be added here programmatically -->
                </WrapPanel>
            </ScrollViewer>

            <!-- Embedded Grid -->
            <Grid x:Name="ListViewPreviewArea" Grid.Row="1" Grid.Column="1" Visibility="Collapsed" Margin="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4.5*" />
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- DataGrid in the left column -->
                <DataGrid Grid.Column="0"
                          Name="GameDataGrid"
                          MouseDoubleClick="GameListDoubleClickOnSelectedItem"
                          ItemsSource="{Binding GameListItems}"
                          Margin="10,10,5,0"
                          BorderThickness="1"
                          BorderBrush="{DynamicResource MahApps.Brushes.ThemeForeground}"
                          Background="{DynamicResource MahApps.Brushes.ThemeBackground}"
                          Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          GridLinesVisibility="All"
                          SelectionChanged="GameListSelectionChanged" d:DataContext="{d:DesignInstance }">
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="ContextMenu" Value="{Binding ContextMenu}" />
                            <Setter Property="Foreground" Value="{DynamicResource MahApps.Brushes.ThemeForeground}" />
                            <!-- Text color from theme -->
                            <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.ThemeBackground}" />
                            <!-- Row background from theme -->

                            <!-- Trigger to control the hover background and foreground color -->
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Accent}" />
                                    <!-- Accent color for selected row -->
                                    <Setter Property="Foreground"
                                            Value="{DynamicResource MahApps.Brushes.ThemeForeground}" />
                                    <!-- Keep text color from theme on hover -->
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Accent}" />
                                    <!-- Accent color for selected row -->
                                    <Setter Property="Foreground"
                                            Value="{DynamicResource MahApps.Brushes.IdealForeground}" />
                                    <!-- Ideal foreground color on selection -->
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Favorite" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Image Source="pack://application:,,,/images/star.png" Width="16" Height="16"
                                           Visibility="{Binding IsFavorite, Converter={StaticResource BooleanToVisibilityConverter}}"
                                           d:DataContext="{d:DesignInstance }" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="*" />
                        <DataGridTextColumn Header="Machine Description for MAME files"
                                            Binding="{Binding MachineDescription}" Width="*" />
                        <DataGridTextColumn Header="File Size" Binding="{Binding FileSize}" Width="Auto" />
                        <DataGridTextColumn Header="Times Played" Binding="{Binding TimesPlayed}" Width="Auto" />
                        <DataGridTextColumn Header="Play Time" Binding="{Binding PlayTime}" Width="Auto" />
                    </DataGrid.Columns>
                </DataGrid>

                <!-- GridSplitter between columns 0 and 2 -->
                <GridSplitter Grid.Row="0" Grid.Column="1"
                              Background="Gray"
                              ResizeDirection="Columns"
                              Style="{StaticResource EnhancedGridSplitterStyle}"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Stretch"
                              ShowsPreview="True"
                              ResizeBehavior="PreviousAndNext"
                              Cursor="SizeWE" />

                <Grid Grid.Column="2" Margin="5,0,10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0"
                           Content="{DynamicResource PreviewImage}"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5" />
                    <Border Grid.Row="1"
                            BorderBrush="Gray"
                            BorderThickness="1"
                            Padding="5">
                        <Image Name="PreviewImage"
                               Stretch="Uniform"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                    </Border>
                </Grid>
            </Grid>
        </Grid>

        <Grid Grid.Row="2" VerticalAlignment="Center" Margin="0,5,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center"
                        Margin="5,0,0,0"
                        Orientation="Horizontal">
                <Label x:Name="StatusBarText" Content="" />
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0">
                <Button x:Name="PrevPageButton"
                        Margin="0"
                        ToolTip="{DynamicResource PreviousPage}"
                        Style="{StaticResource NavImageButton3DStyle}"
                        Click="PrevPageButton_Click">
                    <Image Source="pack://application:,,,/images/arrowleft.png"
                           Height="22"
                           Width="22" />
                </Button>
                <Button x:Name="NextPageButton"
                        Margin="10,0,0,0"
                        ToolTip="{DynamicResource NextPage}"
                        Style="{StaticResource NavImageButton3DStyle}"
                        Click="NextPageButton_Click">
                    <Image Source="pack://application:,,,/images/arrowright.png"
                           Height="22"
                           Width="22" />
                </Button>
                <Label
                    x:Name="TotalFilesLabel"
                    Margin="10,0,0,0"
                    Content=""
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Center" />
            </StackPanel>
            <StackPanel Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center"
                        Margin="10,0,0,0"
                        Orientation="Horizontal">
                <Label Content="{DynamicResource System}" Margin="5,0,5,0" />
                <Label Content="{Binding SelectedSystem}" Margin="5,0" d:DataContext="{d:DesignInstance }" />
                <Label Content="{DynamicResource Playtime}" Margin="5,0,5,0" />
                <Label Content="{Binding PlayTime}" Margin="5,0" d:DataContext="{d:DesignInstance }" />
            </StackPanel>

        </Grid>


    </Grid>
</controls:MetroWindow>
