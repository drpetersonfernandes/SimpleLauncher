<controls:MetroWindow x:Class="SimpleLauncher.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
                      Title="Simple Launcher"
                      MinWidth="1050"
                      MinHeight="600"
                      Closing="MainWindow_Closing"
                      MouseWheel="MainWindow_MouseWheel">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <Style x:Key="EnhancedGridSplitterStyle" TargetType="GridSplitter">
            <Setter Property="Width" Value="8" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GridSplitter">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2">
                            <Grid>
                                <!-- Visual indicators - dots in the center -->
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Ellipse Width="3" Height="3" Fill="#ffffff" Margin="0,2,0,2" />
                                    <Ellipse Width="3" Height="3" Fill="#ffffff" Margin="0,2,0,2" />
                                    <Ellipse Width="3" Height="3" Fill="#ffffff" Margin="0,2,0,2" />
                                </StackPanel>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#DDDDDD" Offset="0.0" />
                                            <GradientStop Color="#AAAAAA" Offset="0.5" />
                                            <GradientStop Color="#DDDDDD" Offset="1.0" />
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Reusable ControlTemplate for Image Buttons with 3D Effect -->
        <ControlTemplate x:Key="ImageButton3DEffectTemplate" TargetType="Button">
            <Border x:Name="ButtonBorder"
                    Background="{DynamicResource MahApps.Brushes.Gray10}"
                    BorderBrush="{DynamicResource MahApps.Brushes.Gray7}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="8">
                <Border.Effect>
                    <DropShadowEffect Color="{DynamicResource MahApps.Colors.Gray5}"
                                      Direction="315"
                                      ShadowDepth="3"
                                      Opacity="0.5"
                                      BlurRadius="4" />
                </Border.Effect>
                <!-- Image source will be set on the button instance -->
                <ContentPresenter x:Name="ButtonContentPresenter"
                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="ButtonBorder" Property="Background"
                            Value="{DynamicResource MahApps.Brushes.Accent3}" />
                    <!-- Use MahApps Accent Brush for BorderBrush on hover -->
                    <Setter TargetName="ButtonBorder" Property="BorderBrush"
                            Value="{DynamicResource MahApps.Brushes.Accent}" />
                    <Setter TargetName="ButtonBorder" Property="Effect">
                        <Setter.Value>
                            <!-- Use MahApps Accent Color for DropShadowEffect on hover -->
                            <DropShadowEffect Color="{DynamicResource MahApps.Colors.Accent}"
                                              Direction="315"
                                              ShadowDepth="4"
                                              Opacity="0.7"
                                              BlurRadius="6" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter TargetName="ButtonBorder" Property="Background"
                            Value="{DynamicResource MahApps.Brushes.Accent4}" />
                    <Setter TargetName="ButtonBorder" Property="BorderBrush"
                            Value="{DynamicResource MahApps.Brushes.Accent}" />
                    <Setter TargetName="ButtonBorder" Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="Black"
                                              Direction="315"
                                              ShadowDepth="1"
                                              Opacity="0.8"
                                              BlurRadius="2" />
                        </Setter.Value>
                    </Setter>
                    <!-- Apply translate transform to the content presenter -->
                    <Setter TargetName="ButtonContentPresenter" Property="RenderTransform">
                        <Setter.Value>
                            <TranslateTransform X="1" Y="1" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <!-- Style applying the 3D template to image-only buttons (used for nav buttons etc.) -->
        <Style x:Key="NavImageButton3DStyle" TargetType="Button">
            <Setter Property="Template" Value="{StaticResource ImageButton3DEffectTemplate}" />
            <!-- Default values that can be overridden per button -->
            <Setter Property="Width" Value="40" />
            <Setter Property="Height" Value="40" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,5,2,5" /> <!-- Default margin -->
        </Style>

        <!-- Reusable ControlTemplate for Game Buttons with 3D Effect -->
        <ControlTemplate x:Key="GameButton3DTemplate" TargetType="Button">
            <Border x:Name="ButtonBorder"
                    Background="{DynamicResource MahApps.Brushes.Gray9}"
                    BorderBrush="{DynamicResource MahApps.Brushes.Gray7}"
                    BorderThickness="1"
                    CornerRadius="5"
                    RenderTransformOrigin="0.5,0.5">
                <Border.RenderTransform>
                    <ScaleTransform ScaleX="1.0" ScaleY="1.0" />
                </Border.RenderTransform>
                <Border.Effect>
                    <DropShadowEffect Color="{DynamicResource MahApps.Colors.Gray5}" Direction="315" ShadowDepth="3"
                                      Opacity="0.4" BlurRadius="5" />
                </Border.Effect>
                <ContentPresenter x:Name="ButtonContentPresenter"
                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                  Margin="{TemplateBinding Padding}" />
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="ButtonBorder" Property="Background"
                            Value="{DynamicResource MahApps.Brushes.Accent4}" />
                    <Setter TargetName="ButtonBorder" Property="BorderBrush"
                            Value="{DynamicResource MahApps.Brushes.Accent}" />
                    <Setter TargetName="ButtonBorder" Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="{DynamicResource MahApps.Colors.Accent}" Direction="315"
                                              ShadowDepth="5" Opacity="0.6" BlurRadius="8" />
                        </Setter.Value>
                    </Setter>
                    <Setter TargetName="ButtonBorder" Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.02" ScaleY="1.02" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter TargetName="ButtonBorder" Property="Background"
                            Value="{DynamicResource MahApps.Brushes.Accent}" />
                    <Setter TargetName="ButtonBorder" Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="Black" Direction="315" ShadowDepth="1" Opacity="0.7"
                                              BlurRadius="2" />
                        </Setter.Value>
                    </Setter>
                    <Setter TargetName="ButtonContentPresenter" Property="RenderTransform">
                        <Setter.Value>
                            <TranslateTransform X="1" Y="1" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <!-- Style for Game Buttons -->
        <!-- ReSharper disable once Xaml.RedundantResource -->
        <Style x:Key="GameButtonStyle" TargetType="Button">
            <Setter Property="Template" Value="{StaticResource GameButton3DTemplate}" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="0,5,0,0" />
        </Style>

