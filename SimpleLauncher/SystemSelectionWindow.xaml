<mah:MetroWindow x:Class="SimpleLauncher.SystemSelectionWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 Title="{DynamicResource SelectRetroAchievementsSystemTitle}" 
                 Height="220" Width="400"
                 WindowStartupLocation="CenterScreen" 
                 ShowInTaskbar="False" 
                 ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="{DynamicResource SystemSelectionMessage}" 
                       TextWrapping="Wrap" 
                       Margin="0,0,0,10"/>
            
            <TextBlock Text="{DynamicResource SystemSelectionPrompt}" 
                       FontWeight="Bold" 
                       Margin="0,0,0,5"/>
            
            <ComboBox x:Name="SystemComboBox" 
                      Margin="0,0,0,20" />
            
            <Button Content="{DynamicResource ConfirmSelectionButton}" 
                    Click="Confirm_Click" 
                    IsDefault="True" 
                    Style="{DynamicResource MahApps.Styles.Button.Square.Accent}"/>
        </StackPanel>
    </Grid>
</mah:MetroWindow>
