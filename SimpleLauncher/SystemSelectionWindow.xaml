<mah:MetroWindow x:Class="SimpleLauncher.SystemSelectionWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 Title="{DynamicResource SelectRetroAchievementsSystemTitle}"
                 Height="220" Width="400"
                 WindowStartupLocation="CenterScreen"
                 ShowInTaskbar="False"
                 ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="{DynamicResource SystemSelectionMessage}"
                       TextWrapping="Wrap"
                       Margin="0,0,0,10" />

            <TextBlock Text="{DynamicResource SystemSelectionPrompt}"
                       FontWeight="Bold"
                       Margin="0,0,0,5" />

            <ComboBox x:Name="SystemComboBox"
                      Margin="0,0,0,30" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="{DynamicResource ConfirmSelectionButton}"
                        Click="Confirm_Click"
                        IsDefault="True"
                        Style="{DynamicResource MahApps.Styles.Button.Square.Accent}"
                        Margin="0,0,10,0"
                        Width="120" />

                <Button Content="{DynamicResource Cancel}"
                        Click="Cancel_Click"
                        IsCancel="True"
                        Style="{DynamicResource MahApps.Styles.Button.Square}"
                        Width="80" />
            </StackPanel>
        </StackPanel>
    </Grid>
</mah:MetroWindow>