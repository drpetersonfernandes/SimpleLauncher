<controls:MetroWindow x:Class="SimpleLauncher.GlobalStatsWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
                      Title="{DynamicResource GlobalStats}"
                      Width="1000"
                      Height="700"
                      WindowStartupLocation="CenterScreen"
                      Closing="GlobalStatsWindow_Closing">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Explanation Text -->
        <TextBlock Grid.Row="0" Margin="10,20,10,10" TextWrapping="Wrap" x:Name="GlobalInfoTextBlock">
            <Run Text="{DynamicResource GlobalStatsExplanation}" />
        </TextBlock>

        <!-- Start/Process Button -->
        <StackPanel Grid.Row="1" Margin="10" HorizontalAlignment="Center">
            <Button x:Name="StartButton"
                    Width="110"
                    Click="StartButtonClickAsync"
                    Content="{DynamicResource StartProcess}" />
        </StackPanel>

        <!-- Progress Area -->
        <Grid Grid.Row="2">
            <Border x:Name="ProgressBar" BorderBrush="Gray" Margin="10" Visibility="Collapsed">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="{DynamicResource Processingpleasewait}" HorizontalAlignment="Center" Margin="20" />
                    <ProgressBar IsIndeterminate="True" Width="200" Margin="10" />
                    <Button x:Name="CancelButton"
                            Margin="10"
                            HorizontalAlignment="Center"
                            Width="110"
                            Click="CancelButton_Click"
                            Content="{DynamicResource Cancel}" />
                </StackPanel>
            </Border>
        </Grid>

        <ScrollViewer Grid.Row="3" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto"
                      Margin="10">
            <DataGrid x:Name="SystemStatsDataGrid" AutoGenerateColumns="False" CanUserAddRows="False"
                      GridLinesVisibility="All" BorderThickness="1" BorderBrush="Gray"
                      ScrollViewer.CanContentScroll="True" d:DataContext="{d:DesignInstance }">
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <!-- Trigger when NumberOfFiles and NumberOfImages match -->
                            <DataTrigger Binding="{Binding AreFilesAndImagesEqual}" Value="True">
                                <Setter Property="Background" Value="LightGreen" />
                            </DataTrigger>
                            <!-- Trigger when NumberOfFiles and NumberOfImages do not match -->
                            <DataTrigger Binding="{Binding AreFilesAndImagesEqual}" Value="False">
                                <Setter Property="Background" Value="LightCoral" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="System Name" Binding="{Binding SystemName}" Width="*" />
                    <DataGridTextColumn Header="Number of ROMs or ISOs" Binding="{Binding NumberOfFiles}" Width="Auto" />
                    <DataGridTextColumn Header="Number of Matched Images" Binding="{Binding NumberOfImages}"
                                        Width="Auto" />
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>

        <StackPanel
            Grid.Row="4"
            Margin="10,10,10,20"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Width="110"
                x:Name="SaveButton"
                Click="SaveReport_Click"
                Content="{DynamicResource SaveReport}"
                Visibility="Collapsed" />
        </StackPanel>

        <!-- Full-window overlay for the "Cancelling" message -->
        <Border x:Name="GlobalCancellingOverlay"
                Grid.Row="0"
                Grid.RowSpan="5"
                Background="{DynamicResource MahApps.Brushes.Overlay}"
                Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <controls:ProgressRing IsActive="True"
                                       Width="50"
                                       Height="50"
                                       Foreground="{DynamicResource MahApps.Brushes.Accent}" />
                <TextBlock Text="{DynamicResource CancellingPleasewait}"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
                           Margin="0,20,0,0" />
            </StackPanel>
        </Border>
    </Grid>
</controls:MetroWindow>