<controls:MetroWindow x:Class="SimpleLauncher.GlobalStatsWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
                      Title="{DynamicResource GlobalStats}"
                      Width="1000"
                      Height="700"
                      WindowStartupLocation="CenterScreen"
                      Closing="GlobalStatsWindow_Closing" x:ClassModifier="internal">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Explanation Text -->
        <TextBlock Grid.Row="0" Margin="10,20,10,10" TextWrapping="Wrap" x:Name="GlobalInfoTextBlock">
            <Run Text="{DynamicResource GlobalStatsExplanation}" />
        </TextBlock>

        <!-- Start/Process Button -->
        <StackPanel Grid.Row="1" Margin="10" HorizontalAlignment="Center">
            <Button x:Name="StartButton"
                    Width="110"
                    Click="StartButtonClickAsync"
                    Content="{DynamicResource StartProcess}" />
        </StackPanel>

        <ScrollViewer Grid.Row="3" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto"
                      Margin="10">
            <DataGrid x:Name="SystemStatsDataGrid" AutoGenerateColumns="False" CanUserAddRows="False"
                      GridLinesVisibility="All" BorderThickness="1" BorderBrush="Gray"
                      ScrollViewer.CanContentScroll="True" d:DataContext="{d:DesignInstance }">
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding AreFilesAndImagesEqual}" Value="True">
                                <Setter Property="Background" Value="LightGreen" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding AreFilesAndImagesEqual}" Value="False">
                                <Setter Property="Background" Value="LightCoral" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{DynamicResource SystemNameHeader}" Binding="{Binding SystemName}" Width="*" />
                    <DataGridTextColumn Header="{DynamicResource RomCountColumnHeader}" Binding="{Binding NumberOfFiles}" Width="Auto" />
                    <DataGridTextColumn Header="{DynamicResource MatchedImageCountColumnHeader}" Binding="{Binding NumberOfImages}" Width="Auto" />
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>

        <StackPanel
            Grid.Row="4"
            Margin="10,10,10,20"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Width="110"
                x:Name="SaveButton"
                Click="SaveReport_Click"
                Content="{DynamicResource SaveReport}"
                Visibility="Collapsed" />
        </StackPanel>

        <!-- BUSY OVERLAY -->
        <ContentControl x:Name="BusyServiceOverlay"
                        Grid.Row="0"
                        Grid.RowSpan="5"
                        Panel.ZIndex="100"
                        Template="{StaticResource LoadingOverlayTemplate}"
                        Visibility="Collapsed"
                        Content="{DynamicResource Processingpleasewait}" />

        <!-- CANCEL BUTTON OVERLAY -->
        <Grid Grid.Row="0" Grid.RowSpan="5" Panel.ZIndex="101" x:Name="CancelOverlayContainer" Visibility="Collapsed">
            <Button x:Name="CancelButton"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="0,170,0,0"
                    Width="110"
                    Click="CancelButton_Click"
                    Content="{DynamicResource Cancel}" />
        </Grid>
    </Grid>
</controls:MetroWindow>