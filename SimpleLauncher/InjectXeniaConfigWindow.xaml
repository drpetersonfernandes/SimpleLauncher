<controls:MetroWindow x:Class="SimpleLauncher.InjectXeniaConfigWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      Title="{DynamicResource XeniaConfig_Title}"
                      Height="850" Width="700"
                      ResizeMode="CanResize"
                      WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- GPU Section -->
                <GroupBox Header="{DynamicResource XeniaConfig_Gpu_Header}" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="{DynamicResource XeniaConfig_GpuApi_Label}" VerticalAlignment="Center"/>
                            <ComboBox x:Name="CmbGpu" Grid.Column="1" ToolTip="{DynamicResource XeniaConfig_GpuApi_Tooltip}">
                                <ComboBoxItem Content="d3d12"/>
                                <ComboBoxItem Content="vulkan"/>
                                <ComboBoxItem Content="null"/>
                            </ComboBox>
                        </Grid>
                        
                        <CheckBox x:Name="ChkVsync" Content="{DynamicResource XeniaConfig_Vsync_Checkbox}" Margin="0,5" ToolTip="{DynamicResource XeniaConfig_Vsync_Tooltip}"/>
                        <CheckBox x:Name="ChkFullscreen" Content="{DynamicResource XeniaConfig_Fullscreen_Checkbox}" Margin="0,5" ToolTip="{DynamicResource XeniaConfig_Fullscreen_Tooltip}"/>

                        <Label Content="{DynamicResource XeniaConfig_ResolutionScale_Label}" Margin="0,5,0,0" ToolTip="{DynamicResource XeniaConfig_ResolutionScale_Tooltip}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <ComboBox x:Name="CmbResX" Grid.Column="0">
                                <ComboBoxItem Content="1"/>
                                <ComboBoxItem Content="2"/>
                                <ComboBoxItem Content="3"/>
                            </ComboBox>
                            <TextBlock Text="x" Grid.Column="1" VerticalAlignment="Center" Margin="10,0"/>
                            <ComboBox x:Name="CmbResY" Grid.Column="2">
                                <ComboBoxItem Content="1"/>
                                <ComboBoxItem Content="2"/>
                                <ComboBoxItem Content="3"/>
                            </ComboBox>
                        </Grid>
                        
                        <Label Content="{DynamicResource XeniaConfig_PostProcessingAa_Label}" Margin="0,5,0,0"/>
                        <ComboBox x:Name="CmbAa" ToolTip="{DynamicResource XeniaConfig_PostProcessingAa_Tooltip}">
                            <ComboBoxItem Content="None" Tag=""/>
                            <ComboBoxItem Content="FXAA" Tag="fxaa"/>
                            <ComboBoxItem Content="FXAA Extreme" Tag="fxaa_extreme"/>
                        </ComboBox>

                        <Label Content="{DynamicResource XeniaConfig_ScalingSharpening_Label}" Margin="0,5,0,0"/>
                        <ComboBox x:Name="CmbScaling" ToolTip="{DynamicResource XeniaConfig_ScalingSharpening_Tooltip}">
                            <ComboBoxItem Content="FSR" Tag="fsr"/>
                            <ComboBoxItem Content="CAS" Tag="cas"/>
                            <ComboBoxItem Content="Bilinear" Tag="bilinear"/>
                        </ComboBox>

                        <Label Content="{DynamicResource XeniaConfig_ReadbackResolve_Label}" Margin="0,5,0,0"/>
                        <ComboBox x:Name="CmbReadback" ToolTip="{DynamicResource XeniaConfig_ReadbackResolve_Tooltip}">
                            <ComboBoxItem Content="{DynamicResource XeniaConfig_ReadbackResolve_None}" Tag="none"/>
                            <ComboBoxItem Content="{DynamicResource XeniaConfig_ReadbackResolve_Fast}" Tag="fast"/>
                            <ComboBoxItem Content="{DynamicResource XeniaConfig_ReadbackResolve_Full}" Tag="full"/>
                        </ComboBox>

                        <CheckBox x:Name="ChkGammaSrgb" Content="{DynamicResource XeniaConfig_GammaSrgb_Checkbox}" Margin="0,5" ToolTip="{DynamicResource XeniaConfig_GammaSrgb_Tooltip}"/>

                    </StackPanel>
                </GroupBox>

                <!-- Audio Section -->
                <GroupBox Header="{DynamicResource XeniaConfig_Apu_Header}" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="{DynamicResource XeniaConfig_AudioDriver_Label}" VerticalAlignment="Center"/>
                            <ComboBox x:Name="CmbApu" Grid.Column="1" ToolTip="{DynamicResource XeniaConfig_AudioDriver_Tooltip}">
                                <ComboBoxItem Content="xaudio2"/>
                                <ComboBoxItem Content="sdl"/>
                                <ComboBoxItem Content="nop"/>
                                <ComboBoxItem Content="any"/>
                            </ComboBox>
                        </Grid>
                        <CheckBox x:Name="ChkMute" Content="{DynamicResource XeniaConfig_MuteAudio_Checkbox}" Margin="0,5" ToolTip="{DynamicResource XeniaConfig_MuteAudio_Tooltip}"/>
                    </StackPanel>
                </GroupBox>

                <!-- System Section -->
                <GroupBox Header="{DynamicResource XeniaConfig_SystemInput_Header}" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <CheckBox x:Name="ChkPatches" Content="{DynamicResource XeniaConfig_ApplyPatches_Checkbox}" Margin="0,5" ToolTip="{DynamicResource XeniaConfig_ApplyPatches_Tooltip}"/>
                        <CheckBox x:Name="ChkMountCache" Content="{DynamicResource XeniaConfig_MountCache_Checkbox}" Margin="0,5" ToolTip="{DynamicResource XeniaConfig_MountCache_Tooltip}"/>
                        <CheckBox x:Name="ChkVibration" Content="{DynamicResource XeniaConfig_Vibration_Checkbox}" Margin="0,5" ToolTip="{DynamicResource XeniaConfig_Vibration_Tooltip}"/>
                        
                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="{DynamicResource XeniaConfig_Hid_Label}" VerticalAlignment="Center"/>
                            <ComboBox x:Name="CmbHid" Grid.Column="1" ToolTip="{DynamicResource XeniaConfig_Hid_Tooltip}">
                                <ComboBoxItem Content="xinput"/>
                                <ComboBoxItem Content="sdl"/>
                                <ComboBoxItem Content="winkey"/>
                                <ComboBoxItem Content="any"/>
                            </ComboBox>
                        </Grid>

                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="{DynamicResource XeniaConfig_UserLanguage_Label}" VerticalAlignment="Center"/>
                            <ComboBox x:Name="CmbLang" Grid.Column="1" ToolTip="{DynamicResource XeniaConfig_UserLanguage_Tooltip}">
                                <ComboBoxItem Content="English" Tag="1"/>
                                <ComboBoxItem Content="Japanese" Tag="2"/>
                                <ComboBoxItem Content="German" Tag="3"/>
                                <ComboBoxItem Content="French" Tag="4"/>
                                <ComboBoxItem Content="Spanish" Tag="5"/>
                                <ComboBoxItem Content="Italian" Tag="6"/>
                                <ComboBoxItem Content="Korean" Tag="7"/>
                                <ComboBoxItem Content="Chinese" Tag="8"/>
                                <ComboBoxItem Content="Portuguese" Tag="9"/>
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                </GroupBox>
                <CheckBox x:Name="ChkShowBeforeLaunch" 
                          Content="{DynamicResource XeniaConfig_ShowBeforeLaunch_Checkbox}" 
                          Margin="5,10,0,10" />
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="BtnSave" Content="{DynamicResource XeniaConfig_Save_Button}" Width="100" Height="35" Margin="0,0,10,0"
                    Style="{DynamicResource MahApps.Styles.Button.Square}" 
                    Click="BtnSave_Click"/>
            <Button x:Name="BtnRun" Content="{DynamicResource XeniaConfig_Run_Button}" Width="120" Height="35" 
                    Style="{DynamicResource MahApps.Styles.Button.Square.Accent}" 
                    Click="BtnRun_Click" IsDefault="True"/>
            <Button Content="{DynamicResource XeniaConfig_Cancel_Button}" Width="100" Height="35" Margin="10,0,0,0" IsCancel="True"/>
        </StackPanel>
    </Grid>
</controls:MetroWindow>