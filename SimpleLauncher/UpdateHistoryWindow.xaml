<controls:MetroWindow x:Class="SimpleLauncher.UpdateHistoryWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:markdig="clr-namespace:Markdig.Wpf;assembly=Markdig.Wpf"
                      Title="{DynamicResource UpdateHistory}"
                      Width="800"
                      Height="700"
                      MinWidth="700"
                      MinHeight="550"
                      WindowStartupLocation="CenterScreen">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="10">
            <markdig:MarkdownViewer x:Name="MarkdownViewer" />
        </ScrollViewer>
    </Grid>
</controls:MetroWindow>