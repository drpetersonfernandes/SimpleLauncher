<controls:MetroWindow x:Class="SimpleLauncher.InjectDolphinConfigWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      Title="{DynamicResource DolphinConfig_Title}"
                      Height="500" Width="700"
                      ResizeMode="CanResize"
                      WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Core Section -->
                <GroupBox Header="{DynamicResource DolphinConfig_Core_Header}" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label Content="{DynamicResource DolphinConfig_GfxBackend_Label}" VerticalAlignment="Center" />
                            <ComboBox x:Name="CmbGfxBackend" Grid.Column="1" ToolTip="{DynamicResource DolphinConfig_GfxBackend_Tooltip}">
                                <ComboBoxItem Content="Vulkan" />
                                <ComboBoxItem Content="D3D12" />
                                <ComboBoxItem Content="D3D11" />
                                <ComboBoxItem Content="OpenGL" />
                                <ComboBoxItem Content="Software Renderer" />
                            </ComboBox>
                        </Grid>
                        <CheckBox x:Name="ChkDspThread" Content="{DynamicResource DolphinConfig_DspThread_Checkbox}" Margin="0,5" ToolTip="{DynamicResource DolphinConfig_DspThread_Tooltip}" />
                    </StackPanel>
                </GroupBox>

                <!-- Wiimote Section -->
                <GroupBox Header="{DynamicResource DolphinConfig_Wiimote_Header}" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <CheckBox x:Name="ChkWiimoteContinuousScanning" Content="{DynamicResource DolphinConfig_WiimoteContinuousScanning_Checkbox}" Margin="0,5" ToolTip="{DynamicResource DolphinConfig_WiimoteContinuousScanning_Tooltip}" />
                        <CheckBox x:Name="ChkWiimoteEnableSpeaker" Content="{DynamicResource DolphinConfig_WiimoteEnableSpeaker_Checkbox}" Margin="0,5" ToolTip="{DynamicResource DolphinConfig_WiimoteEnableSpeaker_Tooltip}" />
                    </StackPanel>
                </GroupBox>

                <!-- CRITICAL SETTING -->
                <Border Background="{DynamicResource MahApps.Brushes.Accent}" BorderBrush="{DynamicResource MahApps.Brushes.Accent2}" BorderThickness="4" CornerRadius="10" Padding="20" Margin="5,20,5,10">
                    <Border.Effect>
                        <DropShadowEffect Color="{DynamicResource MahApps.Colors.Gray3}" Direction="320" ShadowDepth="8" Opacity="0.5" BlurRadius="10" />
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="{DynamicResource IMPORTANTSETTING}" FontSize="12" FontWeight="Bold" Foreground="{DynamicResource MahApps.Brushes.IdealForeground}" Margin="0,0,0,8" />
                        <CheckBox x:Name="ChkShowBeforeLaunch" Content="{DynamicResource DolphinConfig_ShowBeforeLaunch_Checkbox}" FontSize="13" FontWeight="Bold" Foreground="{DynamicResource MahApps.Brushes.IdealForeground}" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="BtnSave" Content="{DynamicResource DolphinConfig_Save_Button}" Width="100" Height="35" Margin="0,0,10,0"
                    Style="{DynamicResource MahApps.Styles.Button.Square}"
                    Click="BtnSave_Click" />
            <Button x:Name="BtnRun" Content="{DynamicResource DolphinConfig_Run_Button2}" Width="120" Height="35"
                    Style="{DynamicResource MahApps.Styles.Button.Square.Accent}"
                    Click="BtnRun_Click" IsDefault="True" />
            <Button Content="{DynamicResource DolphinConfig_Cancel_Button}" Width="100" Height="35" Margin="10,0,0,0" Style="{DynamicResource MahApps.Styles.Button.Square}" IsCancel="True" />
        </StackPanel>
    </Grid>
</controls:MetroWindow>