<controls:MetroWindow x:Class="SimpleLauncher.InjectCemuConfigWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      Title="{DynamicResource CemuConfig_Title}"
                      Height="600" Width="700"
                      ResizeMode="CanResize"
                      WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Video Section -->
                <GroupBox Header="{DynamicResource CemuConfig_Video_Header}" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <CheckBox x:Name="ChkFullscreen" Content="{DynamicResource CemuConfig_Fullscreen_Checkbox}" Margin="0,5" ToolTip="{DynamicResource CemuConfig_Fullscreen_Tooltip}"/>
                        
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="{DynamicResource CemuConfig_Api_Label}" VerticalAlignment="Center"/>
                            <ComboBox x:Name="CmbApi" Grid.Column="1" ToolTip="{DynamicResource CemuConfig_Api_Tooltip}">
                                <ComboBoxItem Content="OpenGL" Tag="0"/>
                                <ComboBoxItem Content="Vulkan" Tag="1"/>
                            </ComboBox>
                        </Grid>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="{DynamicResource CemuConfig_Vsync_Label}" VerticalAlignment="Center"/>
                            <ComboBox x:Name="CmbVsync" Grid.Column="1" ToolTip="{DynamicResource CemuConfig_Vsync_Tooltip}">
                                <ComboBoxItem Content="{DynamicResource CemuConfig_Vsync_Off}" Tag="0"/>
                                <ComboBoxItem Content="{DynamicResource CemuConfig_Vsync_On}" Tag="1"/>
                            </ComboBox>
                        </Grid>

                        <CheckBox x:Name="ChkAsyncCompile" Content="{DynamicResource CemuConfig_AsyncCompile_Checkbox}" Margin="0,5" ToolTip="{DynamicResource CemuConfig_AsyncCompile_Tooltip}"/>
                    </StackPanel>
                </GroupBox>

                <!-- Audio Section -->
                <GroupBox Header="{DynamicResource CemuConfig_Audio_Header}" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <Label Content="{DynamicResource CemuConfig_Volume_Label}" VerticalAlignment="Center"/>
                        <Slider x:Name="SldVolume" Minimum="0" Maximum="100" IsSnapToTickEnabled="True" TickFrequency="1" ToolTip="{DynamicResource CemuConfig_Volume_Tooltip}"/>
                    </StackPanel>
                </GroupBox>

                <!-- General Section -->
                <GroupBox Header="{DynamicResource CemuConfig_General_Header}" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <CheckBox x:Name="ChkDiscord" Content="{DynamicResource CemuConfig_Discord_Checkbox}" Margin="0,5" ToolTip="{DynamicResource CemuConfig_Discord_Tooltip}"/>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="{DynamicResource CemuConfig_Language_Label}" VerticalAlignment="Center"/>
                            <ComboBox x:Name="CmbLanguage" Grid.Column="1" ToolTip="{DynamicResource CemuConfig_Language_Tooltip}">
                                <ComboBoxItem Content="Japanese" Tag="0"/>
                                <ComboBoxItem Content="English" Tag="1"/>
                                <ComboBoxItem Content="French" Tag="2"/>
                                <ComboBoxItem Content="German" Tag="3"/>
                                <ComboBoxItem Content="Italian" Tag="4"/>
                                <ComboBoxItem Content="Spanish" Tag="5"/>
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <CheckBox x:Name="ChkShowBeforeLaunch" 
                          Content="{DynamicResource CemuConfig_ShowBeforeLaunch_Checkbox}" 
                          Margin="5,10,0,10" />
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="BtnSave" Content="{DynamicResource CemuConfig_Save_Button}" Width="100" Height="35" Margin="0,0,10,0"
                    Style="{DynamicResource MahApps.Styles.Button.Square}" Click="BtnSave_Click"/>
            <Button x:Name="BtnRun" Content="{DynamicResource CemuConfig_Run_Button}" Width="120" Height="35" 
                    Style="{DynamicResource MahApps.Styles.Button.Square.Accent}" Click="BtnRun_Click" IsDefault="True"/>
            <Button Content="{DynamicResource CemuConfig_Cancel_Button}" Width="100" Height="35" Margin="10,0,0,0" Style="{DynamicResource MahApps.Styles.Button.Square}" IsCancel="True"/>
        </StackPanel>
    </Grid>
</controls:MetroWindow>
