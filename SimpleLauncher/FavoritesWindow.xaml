<controls:MetroWindow x:Class="SimpleLauncher.FavoritesWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
                      Title="{DynamicResource Favorites}"
                      Width="1200"
                      MinWidth="800"
                      Height="600"
                      MinHeight="550"
                      WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="EnhancedGridSplitterStyle" TargetType="GridSplitter">
            <Setter Property="Width" Value="8" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GridSplitter">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2">
                            <Grid>
                                <!-- Visual indicators - dots in the center -->
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Ellipse Width="3" Height="3" Fill="#ffffff" Margin="0,2,0,2" />
                                    <Ellipse Width="3" Height="3" Fill="#ffffff" Margin="0,2,0,2" />
                                    <Ellipse Width="3" Height="3" Fill="#ffffff" Margin="0,2,0,2" />
                                </StackPanel>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#DDDDDD" Offset="0.0" />
                                            <GradientStop Color="#AAAAAA" Offset="0.5" />
                                            <GradientStop Color="#DDDDDD" Offset="1.0" />
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main container Grid that holds both the content and overlay -->
    <Grid>
        <!-- Main content Grid -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4.5*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0"
                   Margin="10"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Content="{DynamicResource ListofFavorites}" />
            <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="10">
                <Button Content="{DynamicResource RemovefromFavorites}" Click="RemoveFavoriteButton_Click"
                        Padding="5"
                        Margin="0,0,10,0" />
                <Button Content="{DynamicResource LaunchSelectedGame}" Click="LaunchGameClickAsync"
                        Padding="5" />
            </StackPanel>
            <DataGrid Name="FavoritesDataGrid"
                      CanUserAddRows="False"
                      GridLinesVisibility="All"
                      BorderThickness="1"
                      BorderBrush="Gray"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      ScrollViewer.CanContentScroll="True"
                      Grid.Row="2"
                      Grid.Column="0"
                      Margin="10"
                      MouseRightButtonUp="FavoritesPrepareForRightClickContextMenu"
                      MouseDoubleClick="LaunchGameWithDoubleClickAsync"
                      SelectionChanged="SetPreviewImageOnSelectionChangedAsync"
                      PreviewKeyDown="FavoritesDataGrid_PreviewKeyDown">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="FileName" Binding="{Binding FileName}" Width="*" />
                    <DataGridTextColumn Header="Machine Description (for MAME files)" Binding="{Binding MachineDescription}" Width="*" />
                    <DataGridTextColumn Header="File Size" Binding="{Binding FormattedFileSize}" Width="Auto" />
                    <DataGridTextColumn Header="Default Emulator" Binding="{Binding DefaultEmulator}" Width="180" />
                    <DataGridTextColumn Header="System Name" Binding="{Binding SystemName}" Width="200" />
                </DataGrid.Columns>
            </DataGrid>

            <!-- GridSplitter between columns 0 and 2 -->
            <GridSplitter Grid.Row="0" Grid.RowSpan="3" Grid.Column="1"
                          Background="Gray"
                          ResizeDirection="Columns"
                          Style="{StaticResource EnhancedGridSplitterStyle}"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"
                          ShowsPreview="True"
                          ResizeBehavior="PreviousAndNext"
                          Cursor="SizeWE" />

            <Grid Grid.Row="0" Grid.RowSpan="3" Grid.Column="2" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Label Grid.Row="0"
                       Content="{DynamicResource PreviewImage}"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10" />
                <Border Grid.Row="1"
                        BorderBrush="Gray"
                        BorderThickness="1"
                        Padding="5">
                    <Image Name="PreviewImage"
                           Stretch="Uniform"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" />
                </Border>
            </Grid>
        </Grid>

        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay" Background="#7F000000" Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <controls:ProgressRing IsActive="True" Width="60" Height="60" />
                <TextBlock x:Name="LoadingMessage" Text="{DynamicResource LoadingFavorites}" Foreground="White" Margin="0,10,0,0" FontSize="16" />
            </StackPanel>
        </Grid>
    </Grid>
</controls:MetroWindow>