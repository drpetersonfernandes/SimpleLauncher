<controls:MetroWindow x:Class="SimpleLauncher.RetroAchievementsWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      mc:Ignorable="d"
                      Title="RetroAchievements"
                      WindowState="Maximized"
                      WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Margin="10" Padding="10" BorderBrush="Gray" BorderThickness="1">
            <StackPanel Orientation="Horizontal">
                <Image x:Name="GameCoverImage" Width="64" Height="64" Stretch="Uniform" />
                <StackPanel VerticalAlignment="Center" Margin="15,0,0,0">
                    <TextBlock x:Name="GameTitleTextBlock" FontSize="20" FontWeight="Bold" Text="Game Title" />
                    <TextBlock x:Name="ProgressTextBlock" FontSize="14" Margin="0,5,0,0" Text="Progress: 0/0 (0/0 Points)" />
                </StackPanel>
            </StackPanel>
        </Border>

        <TabControl Grid.Row="1" Margin="10,0,10,10" SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="Achievements |">
                <Grid>
                    <!-- Progress Summary Header -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="10,10,10,0">
                        <Border Padding="15" BorderBrush="Gray" BorderThickness="1" CornerRadius="5">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock x:Name="GameProgressTitle" FontSize="18" FontWeight="Bold" Margin="0,0,10,0" />
                                    <TextBlock x:Name="GameProgressConsole" FontStyle="Italic" VerticalAlignment="Bottom" />
                                </StackPanel>

                                <!-- Completion Progress Bars -->
                                <Grid Margin="0,15,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="100" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Casual Progress:" FontWeight="Bold" Margin="0,0,0,5" />
                                    <ProgressBar Grid.Row="1" Grid.Column="0" x:Name="CasualProgressbar" Height="20" Margin="0,0,10,0" />
                                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="CasualProgressText" VerticalAlignment="Center" FontWeight="Bold" />
                                </Grid>

                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="100" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Hardcore Progress:" FontWeight="Bold" Margin="0,0,0,5" />
                                    <ProgressBar Grid.Row="1" Grid.Column="0" x:Name="HardcoreProgressbar" Height="20" Margin="0,0,10,0" />
                                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="HardcoreProgressText" VerticalAlignment="Center" FontWeight="Bold" />
                                </Grid>


                                <!-- Achievement Stats -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                                    <Border BorderBrush="Gray" BorderThickness="1" Padding="15" Margin="0,0,10,0">
                                        <StackPanel>
                                            <TextBlock x:Name="EarnedAchievementsValue" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" />
                                            <TextBlock Text="Achievements Earned" HorizontalAlignment="Center" Foreground="Gray" />
                                        </StackPanel>
                                    </Border>
                                    <Border BorderBrush="Gray" BorderThickness="1" Padding="15" Margin="10,0,10,0">
                                        <StackPanel>
                                            <TextBlock x:Name="TotalAchievementsValue" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" />
                                            <TextBlock Text="Total Achievements" HorizontalAlignment="Center" Foreground="Gray" />
                                        </StackPanel>
                                    </Border>
                                    <Border BorderBrush="Gray" BorderThickness="1" Padding="15" Margin="10,0,10,0">
                                        <StackPanel>
                                            <TextBlock x:Name="TotalPointsEarnedValue" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" />
                                            <TextBlock Text="Total Points Earned" HorizontalAlignment="Center" Foreground="Gray" />
                                        </StackPanel>
                                    </Border>
                                    <Border BorderBrush="Gray" BorderThickness="1" Padding="15" Margin="10,0,0,0">
                                        <StackPanel>
                                            <TextBlock x:Name="TruePointsEarnedValue" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" />
                                            <TextBlock Text="True Points Earned" HorizontalAlignment="Center" Foreground="Gray" />
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <!-- Highest Award Info -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                                    <TextBlock Text="Highest Award: " FontWeight="Bold" />
                                    <Image x:Name="HighestAwardIcon" Width="16" Height="16" Margin="0,0,5,0" VerticalAlignment="Center" Visibility="Collapsed" />
                                    <TextBlock x:Name="HighestAwardKindText" FontWeight="Bold" Foreground="Goldenrod" />
                                    <TextBlock Text=" on " FontWeight="Bold" Margin="5,0,0,0" />
                                    <TextBlock x:Name="HighestAwardDateText" FontWeight="Bold" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Achievements DataGrid -->
                     <Grid Grid.Row="1" Margin="10,10,10,10">
                        <DataGrid Name="AchievementsDataGrid" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" Margin="0,10,0,0" d:DataContext="{d:DesignInstance }">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="Icon" Width="Auto">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Image Source="{Binding BadgeUri}" Width="48" Height="48" Margin="5" d:DataContext="{d:DesignInstance }" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*" SortMemberPath="Title" />
                                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*" SortMemberPath="Description" />
                                <DataGridTextColumn Header="Points" Binding="{Binding Points}" Width="Auto" SortMemberPath="Points" />
                                <DataGridTextColumn Header="True Ratio" Binding="{Binding TrueRatio, StringFormat='{}{0}%'}" Width="Auto" SortMemberPath="TrueRatio" />
                                <DataGridTextColumn Header="Unlocked" Binding="{Binding DateUnlockedDisplay}" Width="Auto" SortMemberPath="DateUnlocked" />
                                <DataGridTextColumn Header="Mode" Binding="{Binding ModeDisplay}" Width="Auto" SortMemberPath="UnlockedInHardcore" />
                                <DataGridTextColumn Header="Rarity" Binding="{Binding RarityDisplay}" Width="Auto" SortMemberPath="NumAwardedHardcore" />
                                <DataGridTextColumn Header="Author" Binding="{Binding AuthorDisplay}" Width="Auto" SortMemberPath="Author" />
                            </DataGrid.Columns>
                        </DataGrid>
                        <Grid x:Name="NoAchievementsOverlay" Background="{DynamicResource MahApps.Brushes.Control.Background}" Visibility="Collapsed">
                            <TextBlock Text="No achievements found for this game." VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" />
                        </Grid>
                    </Grid>
                </Grid>
            </TabItem>

                        <TabItem Header="Game Info |">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10">
                    <StackPanel>
                        <!-- Game Header (remains unchanged) -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <Image x:Name="GameInfoIcon" Width="64" Height="64" Stretch="Uniform" Margin="0,0,15,0" />
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock x:Name="GameInfoTitle" FontWeight="Bold" FontSize="20" TextWrapping="Wrap" />
                                <TextBlock x:Name="GameInfoConsole" FontStyle="Italic" Margin="0,5,0,0" />
                            </StackPanel>
                        </StackPanel>

                        <!-- Game Images Section - UPDATED -->
                        <TextBlock Text="Game Images" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" />
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- ImageIcon -->
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Icon" FontSize="12" HorizontalAlignment="Center" />
                                <Image x:Name="GameInfoImageIcon" Width="120" Height="90" Stretch="Uniform" Margin="0,5,0,0" MouseLeftButtonDown="GameImage_MouseLeftButtonDown" />
                            </StackPanel>

                            <!-- Title Screen -->
                            <StackPanel Grid.Column="1" Margin="10,0,10,0">
                                <TextBlock Text="Title Screen" FontSize="12" HorizontalAlignment="Center" />
                                <Image x:Name="GameInfoTitleImage" Width="120" Height="90" Stretch="Uniform" Margin="0,5,0,0" MouseLeftButtonDown="GameImage_MouseLeftButtonDown" />
                            </StackPanel>

                            <!-- In-Game -->
                            <StackPanel Grid.Column="2" Margin="10,0,10,0">
                                <TextBlock Text="In-Game" FontSize="12" HorizontalAlignment="Center" />
                                <Image x:Name="GameInfoIngameImage" Width="120" Height="90" Stretch="Uniform" Margin="0,5,0,0" MouseLeftButtonDown="GameImage_MouseLeftButtonDown" />
                            </StackPanel>

                            <!-- Box Art -->
                            <StackPanel Grid.Column="3" Margin="10,0,0,0">
                                <TextBlock Text="Box Art" FontSize="12" HorizontalAlignment="Center" />
                                <Image x:Name="GameInfoBoxArtImage" Width="120" Height="90" Stretch="Uniform" Margin="0,5,0,0" MouseLeftButtonDown="GameImage_MouseLeftButtonDown" />
                            </StackPanel>
                        </Grid>

                        <!-- Game Details Grid (remains unchanged) -->
                        <TextBlock Text="Game Details" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" />
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Genre:" FontWeight="Bold" Margin="0,0,10,5" />
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="GameInfoGenre" Margin="0,0,20,5" />

                            <TextBlock Grid.Row="0" Grid.Column="2" Text="Released:" FontWeight="Bold" Margin="0,0,10,5" />
                            <TextBlock Grid.Row="0" Grid.Column="3" x:Name="GameInfoReleased" Margin="0,0,0,5" />

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Developer:" FontWeight="Bold" Margin="0,0,10,5" />
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="GameInfoDeveloper" Margin="0,0,20,5" />

                            <TextBlock Grid.Row="1" Grid.Column="2" Text="Publisher:" FontWeight="Bold" Margin="0,0,10,5" />
                            <TextBlock Grid.Row="1" Grid.Column="3" x:Name="GameInfoPublisher" Margin="0,0,0,5" />

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Players:" FontWeight="Bold" Margin="0,0,10,5" />
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="GameInfoPlayers" Margin="0,0,20,5" />

                            <TextBlock Grid.Row="2" Grid.Column="2" Text="Achievements:" FontWeight="Bold" Margin="0,0,10,5" />
                            <TextBlock Grid.Row="2" Grid.Column="3" x:Name="GameInfoAchievementCount" Margin="0,0,0,5" />

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Forum Topic:" FontWeight="Bold" Margin="0,0,10,5" />
                            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="GameInfoForumTopic" Margin="0,0,20,5" />

                            <TextBlock Grid.Row="3" Grid.Column="2" Text="Updated:" FontWeight="Bold" Margin="0,0,10,5" />
                            <TextBlock Grid.Row="3" Grid.Column="3" x:Name="GameInfoUpdated" Margin="0,0,0,5" />

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Console ID:" FontWeight="Bold" Margin="0,0,10,5" />
                            <TextBlock Grid.Row="4" Grid.Column="1" x:Name="GameInfoConsoleId" Margin="0,0,20,5" />

                            <TextBlock Grid.Row="4" Grid.Column="2" Text="Game ID:" FontWeight="Bold" Margin="0,0,10,5" />
                            <TextBlock Grid.Row="4" Grid.Column="3" x:Name="GameInfoId" Margin="0,0,0,5" />

                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Parent Game:" FontWeight="Bold" Margin="0,0,10,5" />
                            <TextBlock Grid.Row="5" Grid.Column="1" x:Name="GameInfoParentGame" Margin="0,0,20,5" />

                            <TextBlock Grid.Row="5" Grid.Column="2" Text="Release Granularity:" FontWeight="Bold" Margin="0,0,10,5" />
                            <TextBlock Grid.Row="5" Grid.Column="3" x:Name="GameInfoReleaseGranularity" Margin="0,0,0,5" />

                            <TextBlock Grid.Row="6" Grid.Column="0" Text="Guide URL:" FontWeight="Bold" Margin="0,0,10,5" />
                            <TextBlock Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="3" x:Name="GameInfoGuideUrl" Margin="0,0,0,5" />
                        </Grid>

                        <!-- Statistics Section (remains unchanged) -->
                        <TextBlock Text="Player Statistics" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" />
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,5,0">
                                <StackPanel>
                                    <TextBlock x:Name="DistinctPlayersValue" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" />
                                    <TextBlock Text="Total Players" HorizontalAlignment="Center" Foreground="Gray" />
                                </StackPanel>
                            </Border>
                            <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="5,0,5,0">
                                <StackPanel>
                                    <TextBlock x:Name="CasualPlayersValue" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" />
                                    <TextBlock Text="Casual Players" HorizontalAlignment="Center" Foreground="Gray" />
                                </StackPanel>
                            </Border>
                            <Border Grid.Column="2" BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="5,0,0,0">
                                <StackPanel>
                                    <TextBlock x:Name="HardcorePlayersValue" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" />
                                    <TextBlock Text="Hardcore Players" HorizontalAlignment="Center" Foreground="Gray" />
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Rich Presence Script (remains unchanged) -->
                        <TextBlock Text="Rich Presence Script:" FontWeight="Bold" Margin="0,0,0,5" />
                        <TextBox x:Name="GameInfoRichPresence" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Height="150" FontFamily="Consolas" Margin="0,0,0,20" />

                        <!-- Claims Section (remains unchanged) -->
                        <TextBlock Text="Development Claims" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" />
                        <TextBlock x:Name="GameInfoClaims" TextWrapping="Wrap" Margin="0,0,0,20" />

                        <!-- No Data Overlay (remains unchanged) -->
                        <Grid x:Name="NoGameInfoOverlay" Background="{DynamicResource MahApps.Brushes.Control.Background}" Visibility="Collapsed" Margin="0,20,0,0">
                            <TextBlock Text="Extended game information not available." VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" />
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Game Ranking |">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10">
        <StackPanel>
            <!-- High Scores Section -->
            <TextBlock Text="High Scores" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" />
            <DataGrid Name="HighScoresDataGrid" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" Margin="0,0,0,10" 
                      Visibility="Visible" d:DataContext="{d:DesignInstance }">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Rank" Binding="{Binding Rank}" Width="Auto" SortMemberPath="Rank" />
                    <DataGridTextColumn Header="User" Binding="{Binding User}" Width="*" SortMemberPath="User" />
                    <DataGridTextColumn Header="Score" Binding="{Binding Score}" Width="Auto" SortMemberPath="Score" />
                    <DataGridTextColumn Header="True Ratio" Binding="{Binding TrueRatio, StringFormat='{}{0}%'}" Width="Auto" SortMemberPath="TrueRatio" />
                    <DataGridTextColumn Header="Achievements" Binding="{Binding NumAchievements}" Width="Auto" SortMemberPath="NumAchievements" />
                    <DataGridTextColumn Header="Last Award" Binding="{Binding LastAward}" Width="Auto" SortMemberPath="LastAward" />
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,20">
                <Button Content="Refresh High Scores" Click="RefreshHighScores_Click" Padding="10,5" />
            </StackPanel>

            <!-- Game Rank and Score Section -->
            <TextBlock Text="Your Rank and Score" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" />
            <Grid Margin="0,0,0,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Rank:" FontWeight="Bold" Margin="0,0,10,5" />
                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="UserRankText" Margin="0,0,0,5" />
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Score:" FontWeight="Bold" Margin="0,0,10,5" />
                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="UserScoreText" Margin="0,0,0,5" />
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Last Award:" FontWeight="Bold" Margin="0,0,10,5" />
                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="UserLastAwardText" Margin="0,0,0,5" />
                <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" x:Name="NoUserRankOverlay" 
                           Text="No rank data available. Ensure your RetroAchievements credentials are set." 
                           Visibility="Collapsed" Foreground="Gray" Margin="0,10,0,0" />
            </Grid>

            <!-- Game Leaderboards Section -->
            <TextBlock Text="Game Leaderboards" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" />
            <DataGrid Name="LeaderboardsDataGrid" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" Margin="0,0,0,10" d:DataContext="{d:DesignInstance }">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*" SortMemberPath="Title" />
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*" SortMemberPath="Description" />
                    <DataGridTextColumn Header="Format" Binding="{Binding Format}" Width="Auto" SortMemberPath="Format" />
                    <DataGridTextColumn Header="Top User" Binding="{Binding TopEntry.User}" Width="Auto" SortMemberPath="TopEntry.User" />
                    <DataGridTextColumn Header="Top Score" Binding="{Binding TopEntry.FormattedScore}" Width="Auto" SortMemberPath="TopEntry.Score" />
                    <DataGridTextColumn Header="Author" Binding="{Binding Author}" Width="Auto" SortMemberPath="Author" />
                </DataGrid.Columns>
            </DataGrid>
            <!-- NEW: Overlay for no leaderboards message -->
            <Grid x:Name="NoLeaderboardsOverlay" Background="{DynamicResource MahApps.Brushes.Control.Background}" Visibility="Collapsed" Margin="0,10,0,10">
                <TextBlock x:Name="NoLeaderboardsMessageText" Text="No leaderboards found for this game." VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" Foreground="Gray" />
            </Grid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                <Button Content="Refresh Leaderboards" Click="RefreshLeaderboards_Click" Padding="10,5" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</TabItem>
            
            <TabItem Header="My Profile |">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10">
                    <Grid>
                        <StackPanel x:Name="UserProfilePanel">
                            <!-- User Header with Avatar -->
                            <StackPanel Orientation="Horizontal">
                                <Border BorderBrush="Gray" BorderThickness="1" Width="80" Height="80">
                                    <Image x:Name="UserProfilePic" Stretch="Uniform" />
                                </Border>
                                <StackPanel VerticalAlignment="Center" Margin="15,0,0,0">
                                    <TextBlock x:Name="UserProfileUser" FontSize="20" FontWeight="Bold" />
                                    <TextBlock x:Name="UserProfileMotto" FontStyle="Italic" TextWrapping="Wrap" Margin="0,5,0,0" />
                                </StackPanel>
                            </StackPanel>

                            <!-- Refresh Button -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                                <Button Content="Refresh Profile" Click="RefreshProfile_Click" Padding="10,5" />
                            </StackPanel>

                            <!-- Current Activity -->
                            <Border Background="{DynamicResource MahApps.Brushes.Accent}" Margin="0,15,0,15" Padding="10" CornerRadius="5">
                                <StackPanel>
                                    <TextBlock Text="Currently Playing" FontWeight="Bold" Foreground="White" />
                                    <TextBlock x:Name="UserProfileRichPresence" TextWrapping="Wrap" Foreground="White" Margin="0,5,0,0" />
                                </StackPanel>
                            </Border>

                            <!-- User Statistics Grid -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,5,0">
                                    <StackPanel>
                                        <TextBlock x:Name="PointsValue" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" />
                                        <TextBlock Text="Points" HorizontalAlignment="Center" Foreground="Gray" />
                                    </StackPanel>
                                </Border>
                                <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="5,0,5,0">
                                    <StackPanel>
                                        <TextBlock x:Name="TruePointsValue" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" />
                                        <TextBlock Text="True Points" HorizontalAlignment="Center" Foreground="Gray" />
                                    </StackPanel>
                                </Border>
                                <Border Grid.Column="2" BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="5,0,0,0">
                                    <StackPanel>
                                        <TextBlock x:Name="RankValue" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" />
                                        <TextBlock Text="Rank" HorizontalAlignment="Center" Foreground="Gray" />
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <!-- Detailed User Information -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Member Since:" FontWeight="Bold" Margin="0,0,10,5" />
                                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="UserProfileMemberSince" Margin="0,0,0,5" />

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="User ID:" FontWeight="Bold" Margin="0,0,10,5" />
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="UserProfileId" Margin="0,0,0,5" />

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Contributions:" FontWeight="Bold" Margin="0,0,10,5" />
                                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="UserProfileContributions" Margin="0,0,0,5" />

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Softcore Points:" FontWeight="Bold" Margin="0,0,10,5" />
                                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="UserProfileSoftcorePoints" Margin="0,0,0,5" />

                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Permissions:" FontWeight="Bold" Margin="0,0,10,5" />
                                <TextBlock Grid.Row="4" Grid.Column="1" x:Name="UserProfilePermissions" Margin="0,0,0,5" />

                                <TextBlock Grid.Row="5" Grid.Column="0" Text="Status:" FontWeight="Bold" Margin="0,0,10,5" />
                                <TextBlock Grid.Row="5" Grid.Column="1" x:Name="UserProfileStatus" Margin="0,0,0,5" />

                                <TextBlock Grid.Row="6" Grid.Column="0" Text="Profile ID (ULID):" FontWeight="Bold" Margin="0,0,10,5" />
                                <TextBlock Grid.Row="6" Grid.Column="1" x:Name="UserProfileProfileId" Margin="0,0,0,5" />

                                <TextBlock Grid.Row="7" Grid.Column="0" Text="Wall Active:" FontWeight="Bold" Margin="0,0,10,5" />
                                <TextBlock Grid.Row="7" Grid.Column="1" x:Name="UserProfileWallActive" Margin="0,0,0,5" />
                            </Grid>

                            <!-- Recently Played Section -->
                            <TextBlock Text="Recently Played Games:" FontWeight="Bold" Margin="0,15,0,5" />
                            <ListBox x:Name="UserProfileRecentlyPlayed" BorderThickness="1" Background="Transparent">
                                <ListBox.Resources>
                                    <!-- Style to remove default ListBoxItem background/hover/selection colors -->
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="Padding" Value="0" />
                                        <Setter Property="Margin" Value="0" />
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="Transparent" />
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="Transparent" />
                                                <!-- Keep text color consistent on selection -->
                                                <Setter Property="Foreground" Value="{DynamicResource MahApps.Brushes.Text}" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ListBox.Resources>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Background="Transparent" Margin="0,2">
                                            <!-- Game Icon -->
                                            <Image Source="{Binding GameIconUrl}" Width="32" Height="32" Stretch="Uniform" VerticalAlignment="Center" d:DataContext="{d:DesignInstance }" />
                                            <!-- Game Details -->
                                            <StackPanel Margin="10,0,0,0" VerticalAlignment="Center" Background="Transparent">
                                                <!-- Title (make text bold and black/visible) -->
                                                <TextBlock Text="{Binding Title}"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource MahApps.Brushes.Black}"
                                                           FontSize="12"
                                                           TextTrimming="CharacterEllipsis"
                                                           ToolTip="{Binding Title}" d:DataContext="{d:DesignInstance }" />
                                                <!-- Console Name (ensure visibility) -->
                                                <TextBlock Text="{Binding ConsoleName}"
                                                           FontSize="10"
                                                           Foreground="{DynamicResource MahApps.Brushes.Text}"
                                                           TextTrimming="CharacterEllipsis"
                                                           ToolTip="{Binding ConsoleName}" d:DataContext="{d:DesignInstance }" />
                                                <!-- Progress (ensure visibility) -->
                                                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                    <TextBlock Text="Casual: " FontSize="10" Foreground="{DynamicResource MahApps.Brushes.Text}" />
                                                    <TextBlock Text="{Binding ProgressDisplay}"
                                                               FontSize="10"
                                                               Foreground="{DynamicResource MahApps.Brushes.Text}"
                                                               ToolTip="{Binding ProgressDisplay}" d:DataContext="{d:DesignInstance }" />
                                                    <TextBlock Text=" | Hardcore: " FontSize="10" Foreground="{DynamicResource MahApps.Brushes.Text}" Margin="5,0,0,0" />
                                                    <TextBlock Text="{Binding HardcoreProgressDisplay}"
                                                               FontSize="10"
                                                               Foreground="{DynamicResource MahApps.Brushes.Text}"
                                                               ToolTip="{Binding HardcoreProgressDisplay}" d:DataContext="{d:DesignInstance }" />
                                                </StackPanel>
                                                <!-- Last Played (ensure visibility) -->
                                                <TextBlock Text="{Binding LastPlayed}"
                                                           FontSize="10"
                                                           Foreground="{DynamicResource MahApps.Brushes.Text}"
                                                           TextTrimming="CharacterEllipsis"
                                                           ToolTip="{Binding LastPlayed}" d:DataContext="{d:DesignInstance }" />
                                            </StackPanel>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                        <Grid x:Name="NoProfileOverlay" Background="{DynamicResource MahApps.Brushes.Control.Background}" Visibility="Collapsed">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="Could not load user profile. Check username and API key in settings." VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" TextWrapping="Wrap" TextAlignment="Center" />
                                <Button Content="Open RetroAchievements Settings" Margin="0,15,0,0" Click="OpenRaSettings_Click" />
                            </StackPanel>
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            
            <!-- Unlocks by Date -->
            <TabItem Header="Unlocks |">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                        <TextBlock Text="From:" VerticalAlignment="Center" Margin="0,0,5,0" />
                        <DatePicker x:Name="FromDatePicker" Width="120" ToolTip="Select the start date for unlocks (defaults to 1 month ago)" />
                        <TextBlock Text="To:" VerticalAlignment="Center" Margin="15,0,5,0" />
                        <DatePicker x:Name="ToDatePicker" Width="120" ToolTip="Select the end date for unlocks (defaults to today)" />
                        <Button Content="Fetch Unlocks" Click="FetchUnlocks_Click" Margin="15,0,0,0" Padding="10,5" x:Name="FetchUnlocksButton"/>
                        <Button Content="Reset Dates" Click="ResetDates_Click" Margin="10,0,0,0" Padding="10,5" />
                    </StackPanel>

                    <Grid Grid.Row="1" Margin="10,0,10,10">
                        <Border Padding="15" BorderBrush="Gray" BorderThickness="1" CornerRadius="5">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="Total Unlocks in Range: " FontWeight="Bold" />
                                    <TextBlock x:Name="TotalUnlocksInRangeText" FontWeight="Bold" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                                    <TextBlock Text="Total Points Earned: " FontWeight="Bold" />
                                    <TextBlock x:Name="TotalPointsEarnedInRangeText" FontWeight="Bold" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <DataGrid Grid.Row="2" Name="UnlocksDataGrid" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" Margin="10,0,10,10" d:DataContext="{d:DesignInstance }">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Game Icon" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Source="{Binding GameIconFullUrl}" Width="32" Height="32" Margin="5" d:DataContext="{d:DesignInstance }" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Game Title" Binding="{Binding GameTitle}" Width="*" SortMemberPath="GameTitle" />
                            <DataGridTemplateColumn Header="Badge" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Source="{Binding BadgeFullUrl}" Width="32" Height="32" Margin="5" d:DataContext="{d:DesignInstance }" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Achievement" Binding="{Binding Title}" Width="2*" SortMemberPath="Title" />
                            <DataGridTextColumn Header="Points" Binding="{Binding Points}" Width="Auto" SortMemberPath="Points" />
                            <DataGridTextColumn Header="True Ratio" Binding="{Binding TrueRatio, StringFormat='{}{0}%'}" Width="Auto" SortMemberPath="TrueRatio" />
                            <DataGridTextColumn Header="Unlocked Date" Binding="{Binding UnlockedDateDisplay}" Width="Auto" SortMemberPath="UnlockedDate" />
                            <DataGridTextColumn Header="Mode" Binding="{Binding ModeDisplay}" Width="Auto" SortMemberPath="ModeDisplay" />
                            <DataGridTextColumn Header="Console" Binding="{Binding ConsoleName}" Width="Auto" SortMemberPath="ConsoleName" />
                            <DataGridTextColumn Header="Author" Binding="{Binding Author}" Width="Auto" SortMemberPath="Author" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <Grid x:Name="NoUnlocksOverlay" Grid.Row="0" Grid.RowSpan="3" Background="{DynamicResource MahApps.Brushes.Control.Background}" Visibility="Collapsed">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock x:Name="NoUnlocksMainMessage" Text="No unlocks found for the selected date range." VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" TextWrapping="Wrap" TextAlignment="Center" />
                            <TextBlock x:Name="NoUnlocksSubMessage" Text="Adjust the date range and click 'Fetch Unlocks'." VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" Foreground="{DynamicResource MahApps.Brushes.Text}" Margin="0,10,0,0" TextWrapping="Wrap" TextAlignment="Center" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>
            
            <!-- User Progress -->
            <TabItem Header="User Progress |">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,10,5">
                        <Button Content="Refresh User Progress" Click="RefreshUserProgress_Click" Padding="10,5" />
                    </StackPanel>

                    <DataGrid Grid.Row="1" Name="UserProgressDataGrid" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" Margin="10,0,10,10" d:DataContext="{d:DesignInstance }">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Icon" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Source="{Binding ImageIcon}" Width="32" Height="32" Margin="5" d:DataContext="{d:DesignInstance }" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Game Title" Binding="{Binding Title}" Width="2*" SortMemberPath="Title" />
                            <DataGridTextColumn Header="Console" Binding="{Binding ConsoleName}" Width="*" SortMemberPath="ConsoleName" />
                            <DataGridTextColumn Header="Casual" Binding="{Binding CompletionDisplay}" Width="Auto" SortMemberPath="NumAwarded" />
                            <DataGridTextColumn Header="Hardcore" Binding="{Binding HardcoreCompletionDisplay}" Width="Auto" SortMemberPath="NumAwardedHardcore" />
                            <DataGridTextColumn Header="Most Recent Award" Binding="{Binding MostRecentAwardedDateDisplay}" Width="Auto" SortMemberPath="MostRecentAwardedDate" />
                            <DataGridTextColumn Header="Highest Award" Binding="{Binding HighestAwardKindDisplay}" Width="Auto" SortMemberPath="HighestAwardKind" />
                            <DataGridTextColumn Header="Highest Award Date" Binding="{Binding HighestAwardDateDisplay}" Width="Auto" SortMemberPath="HighestAwardDate" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <Grid x:Name="NoUserProgressOverlay" Grid.Row="0" Grid.RowSpan="2" Background="{DynamicResource MahApps.Brushes.Control.Background}" Visibility="Collapsed">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock x:Name="NoUserProgressMainMessage" Text="Could not load user completion progress." VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" TextWrapping="Wrap" TextAlignment="Center" />
                            <TextBlock x:Name="NoUserProgressSubMessage" Text="Please check your username and API key in settings, or try again later." VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" Foreground="{DynamicResource MahApps.Brushes.Text}" Margin="0,10,0,0" TextWrapping="Wrap" TextAlignment="Center" />
                            <Button Content="Open RetroAchievements Settings" Margin="0,15,0,0" Click="OpenRaSettings_Click" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>
            
            <TabItem Header="Top Games">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,10,5">
                        <Button Content="Refresh Top Games" Click="RefreshTopGames_Click" Padding="10,5" />
                    </StackPanel>

                    <DataGrid Grid.Row="1" Name="TopGamesDataGrid" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" Margin="10,0,10,10" d:DataContext="{d:DesignInstance }">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Icon" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Source="{Binding GameIcon}" Width="32" Height="32" Margin="5" d:DataContext="{d:DesignInstance }" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Game Title" Binding="{Binding GameTitle}" Width="2*" SortMemberPath="GameTitle" />
                            <DataGridTextColumn Header="Console" Binding="{Binding Console}" Width="*" SortMemberPath="Console" />
                            <DataGridTextColumn Header="Open Tickets" Binding="{Binding OpenTickets}" Width="Auto" SortMemberPath="OpenTickets" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <Grid x:Name="NoTopGamesOverlay" Grid.Row="0" Grid.RowSpan="2" Background="{DynamicResource MahApps.Brushes.Control.Background}" Visibility="Collapsed">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock x:Name="NoTopGamesMainMessage" Text="Could not load top games." VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" TextWrapping="Wrap" TextAlignment="Center" />
                            <TextBlock x:Name="NoTopGamesSubMessage" Text="Please check your API key in settings, or try again later." VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" Foreground="{DynamicResource MahApps.Brushes.Text}" Margin="0,10,0,0" TextWrapping="Wrap" TextAlignment="Center" />
                            <Button Content="Open RetroAchievements Settings" Margin="0,15,0,0" Click="OpenRaSettings_Click" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
        
        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay" Grid.Row="0" Grid.RowSpan="2" Background="#7F000000" Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <controls:ProgressRing IsActive="True" Width="60" Height="60" />
                <TextBlock Text="Loading..." Foreground="White" Margin="0,10,0,0" FontSize="16" />
            </StackPanel>
        </Grid>
    </Grid>
</controls:MetroWindow>
