<controls:MetroWindow x:Class="SimpleLauncher.GameVerificationWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      Title="{DynamicResource VerifyMicrosoftStoreGames}"
                      Width="600" Height="500"
                      WindowStartupLocation="CenterScreen"
                      ShowMinButton="False"
                      ResizeMode="CanResize" x:ClassModifier="internal">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" TextWrapping="Wrap" Margin="0,0,0,15" Text="{DynamicResource VerifyWindowsGamesDescription}" />

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ListBox x:Name="GamesListBox" SelectionMode="Multiple">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected, Mode=TwoWay}" Margin="5"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="{DynamicResource Confirm}" Click="ConfirmButton_Click" IsDefault="True" Width="100" Margin="0,0,10,0"/>
            <Button Content="{DynamicResource Cancel}" IsCancel="True" Width="100"/>
        </StackPanel>
    </Grid>
</controls:MetroWindow>