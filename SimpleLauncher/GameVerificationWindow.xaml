<controls:MetroWindow x:Class="SimpleLauncher.GameVerificationWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      Title="Verify Microsoft Store Games"
                      Width="600" Height="500"
                      WindowStartupLocation="CenterScreen"
                      ShowMinButton="False"
                      ResizeMode="CanResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" TextWrapping="Wrap" Margin="0,0,0,15">
            Simple Launcher found the following applications from the Microsoft Store. Please select the ones that are games to add them to your library.
        </TextBlock>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ListBox x:Name="GamesListBox" SelectionMode="Multiple">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected, Mode=TwoWay}" Margin="5"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Confirm" Click="ConfirmButton_Click" IsDefault="True" Width="100" Margin="0,0,10,0"/>
            <Button Content="Cancel" IsCancel="True" Width="100"/>
        </StackPanel>
    </Grid>
</controls:MetroWindow>