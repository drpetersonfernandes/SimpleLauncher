<controls:MetroWindow x:Class="SimpleLauncher.InjectMesenConfigWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      Title="{DynamicResource MesenConfig_Title}"
                      Height="700" Width="700"
                      ResizeMode="CanResize"
                      WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Video Section -->
                <GroupBox Header="{DynamicResource MesenConfig_Video_Header}" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <CheckBox x:Name="ChkFullscreen" Content="{DynamicResource MesenConfig_Fullscreen_Checkbox}" Margin="0,5" ToolTip="{DynamicResource MesenConfig_Fullscreen_Tooltip}"/>
                        <CheckBox x:Name="ChkVsync" Content="{DynamicResource MesenConfig_Vsync_Checkbox}" Margin="0,5" ToolTip="{DynamicResource MesenConfig_Vsync_Tooltip}"/>
                        <CheckBox x:Name="ChkBilinear" Content="{DynamicResource MesenConfig_Bilinear_Checkbox}" Margin="0,5" ToolTip="{DynamicResource MesenConfig_Bilinear_Tooltip}"/>
                        <Grid Margin="0,5,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="{DynamicResource MesenConfig_AspectRatio_Label}" VerticalAlignment="Center"/>
                            <ComboBox x:Name="CmbAspectRatio" Grid.Column="1" ToolTip="{DynamicResource MesenConfig_AspectRatio_Tooltip}">
                                <ComboBoxItem Content="NoStretching"/>
                                <ComboBoxItem Content="4:3"/>
                                <ComboBoxItem Content="16:9"/>
                                <ComboBoxItem Content="Auto"/>
                            </ComboBox>
                        </Grid>
                        <Grid Margin="0,5,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="{DynamicResource MesenConfig_VideoFilter_Label}" VerticalAlignment="Center"/>
                            <ComboBox x:Name="CmbVideoFilter" Grid.Column="1" ToolTip="{DynamicResource MesenConfig_VideoFilter_Tooltip}">
                                <ComboBoxItem Content="None"/>
                                <ComboBoxItem Content="NTSC"/>
                                <ComboBoxItem Content="CRT"/>
                                <ComboBoxItem Content="LCD"/>
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- Audio Section -->
                <GroupBox Header="{DynamicResource MesenConfig_Audio_Header}" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <CheckBox x:Name="ChkEnableAudio" Content="{DynamicResource MesenConfig_EnableAudio_Checkbox}" Margin="0,5" ToolTip="{DynamicResource MesenConfig_EnableAudio_Tooltip}"/>
                        <Label Content="{DynamicResource MesenConfig_MasterVolume_Label}" VerticalAlignment="Center"/>
                        <Slider x:Name="SldMasterVolume" Minimum="0" Maximum="100" IsSnapToTickEnabled="True" TickFrequency="1" ToolTip="{DynamicResource MesenConfig_MasterVolume_Tooltip}"/>
                    </StackPanel>
                </GroupBox>

                <!-- Performance & Features Section -->
                <GroupBox Header="{DynamicResource MesenConfig_Performance_Header}" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <CheckBox x:Name="ChkRewind" Content="{DynamicResource MesenConfig_Rewind_Checkbox}" Margin="0,5" ToolTip="{DynamicResource MesenConfig_Rewind_Tooltip}"/>
                        <CheckBox x:Name="ChkPauseInBackground" Content="{DynamicResource MesenConfig_PauseInBackground_Checkbox}" Margin="0,5" ToolTip="{DynamicResource MesenConfig_PauseInBackground_Tooltip}"/>
                        <Label Content="{DynamicResource MesenConfig_RunAhead_Label}" VerticalAlignment="Center"/>
                        <Slider x:Name="SldRunAhead" Minimum="0" Maximum="8" IsSnapToTickEnabled="True" TickFrequency="1" ToolTip="{DynamicResource MesenConfig_RunAhead_Tooltip}"/>
                    </StackPanel>
                </GroupBox>

                <CheckBox x:Name="ChkShowBeforeLaunch" 
                          Content="{DynamicResource MesenConfig_ShowBeforeLaunch_Checkbox}" 
                          Margin="5,10,0,10" />
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="BtnSave" Content="{DynamicResource MesenConfig_Save_Button}" Width="100" Height="35" Margin="0,0,10,0"
                    Style="{DynamicResource MahApps.Styles.Button.Square}" 
                    Click="BtnSave_Click"/>
            <Button x:Name="BtnRun" Content="{DynamicResource MesenConfig_Run_Button2}" Width="120" Height="35" 
                    Style="{DynamicResource MahApps.Styles.Button.Square.Accent}" 
                    Click="BtnRun_Click" IsDefault="True"/>
            <Button Content="{DynamicResource MesenConfig_Cancel_Button}" Width="100" Height="35" Margin="10,0,0,0" Style="{DynamicResource MahApps.Styles.Button.Square}" IsCancel="True"/>
        </StackPanel>
    </Grid>
</controls:MetroWindow>
