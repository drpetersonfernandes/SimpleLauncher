<controls:MetroWindow x:Class="SimpleLauncher.SetFuzzyMatchingWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      mc:Ignorable="d"
                      Title="{DynamicResource SetFuzzyMatchingThresholdTitle}"
                      Height="350"
                      Width="500"
                      ResizeMode="CanResize"
                      WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Current Threshold -->
        <Label Grid.Row="0" Grid.Column="0" Content="{DynamicResource CurrentThresholdLabel}" FontWeight="Bold" VerticalAlignment="Center" />
        <Label Grid.Row="0" Grid.Column="1" x:Name="CurrentThresholdLabel" />

        <!-- New Threshold Input (Slider) -->
        <Label Grid.Row="1" Grid.Column="0" Content="{DynamicResource NewThresholdLabel}" FontWeight="Bold" VerticalAlignment="Center" />
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
            <Slider x:Name="ThresholdSlider"
                    Minimum="0.7"
                    Maximum="0.95"
                    TickFrequency="0.05"
                    IsSnapToTickEnabled="True"
                    Width="200"/>
            <TextBlock Text="{Binding Value, ElementName=ThresholdSlider, StringFormat={}{0:P0}}" Margin="10"/>
        </StackPanel>

        <!-- Description -->
        <TextBlock Grid.Row="2" Grid.Column="1" Text="{DynamicResource FuzzyMatchingThresholdHintSlider}" TextWrapping="Wrap" FontStyle="Italic" />

        <!-- Threshold Explanation -->
        <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" TextWrapping="Wrap" Margin="10,20,10,0">
            <Run Text="{DynamicResource FuzzyMatchingLowThreshold}" FontWeight="Bold" />
            <Run Text="{DynamicResource FuzzyMatchingLowThresholdDescription}" />
        </TextBlock>
        <TextBlock Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" TextWrapping="Wrap" Margin="10,10,10,10">
            <Run Text="{DynamicResource FuzzyMatchingHighThreshold}" FontWeight="Bold" />
            <Run Text="{DynamicResource FuzzyMatchingHighThresholdDescription}" />
        </TextBlock>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10,20,10,10">
            <Button Content="{DynamicResource OkButtonText}" Click="OkButton_Click"
                    Style="{DynamicResource MahApps.Styles.Button.Square.Accent}"
                    IsDefault="True" Padding="10" Margin="0,0,10,0" />
            <Button Content="{DynamicResource CancelButtonText}"
                    Style="{DynamicResource MahApps.Styles.Button.Square}"
                    IsCancel="True" Padding="10" />
        </StackPanel>
    </Grid>
</controls:MetroWindow>