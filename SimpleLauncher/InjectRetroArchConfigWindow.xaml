<controls:MetroWindow x:Class="SimpleLauncher.InjectRetroArchConfigWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      Title="RetroArch Configuration"
                      Height="800" Width="700"
                      ResizeMode="NoResize"
                      WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Video Section -->
                <GroupBox Header="Video" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Video Driver:" VerticalAlignment="Center"/>
                            <ComboBox x:Name="CmbVideoDriver" Grid.Column="1" ToolTip="The driver used for video output (vulkan is recommended for modern GPUs).">
                                <ComboBoxItem Content="gl"/>
                                <ComboBoxItem Content="vulkan"/>
                                <ComboBoxItem Content="d3d11"/>
                                <ComboBoxItem Content="d3d12"/>
                                <ComboBoxItem Content="d3d10"/>
                                <ComboBoxItem Content="sdl2"/>
                            </ComboBox>
                        </Grid>
                        <CheckBox x:Name="ChkFullscreen" Content="Start in Fullscreen" Margin="0,5" ToolTip="Starts RetroArch in fullscreen mode."/>
                        <CheckBox x:Name="ChkVsync" Content="Enable VSync" Margin="0,5" ToolTip="Synchronizes frame rate with monitor refresh to prevent tearing."/>
                        <CheckBox x:Name="ChkThreadedVideo" Content="Threaded Video" Margin="0,5" ToolTip="Improves performance by running video on a separate thread."/>
                        <CheckBox x:Name="ChkBilinear" Content="Bilinear Filtering" Margin="0,5" ToolTip="Applies bilinear filtering to smooth pixels."/>
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Aspect Ratio:" VerticalAlignment="Center"/>
                            <ComboBox x:Name="CmbAspectRatio" Grid.Column="1" ToolTip="Sets the screen aspect ratio (Core Provided is usually best).">
                                <ComboBoxItem Content="Core Provided" Tag="22"/>
                                <ComboBoxItem Content="4:3" Tag="0"/>
                                <ComboBoxItem Content="16:9" Tag="1"/>
                                <ComboBoxItem Content="16:10" Tag="2"/>
                            </ComboBox>
                        </Grid>
                        <CheckBox x:Name="ChkScaleInteger" Content="Integer Scaling" Margin="0,5" ToolTip="Scales the image by whole numbers to ensure perfect pixels."/>
                        <CheckBox x:Name="ChkShaderEnable" Content="Enable Shaders" Margin="0,5" ToolTip="Enables the use of graphical shaders."/>
                        <CheckBox x:Name="ChkHardSync" Content="GPU Hard Sync" Margin="0,5" ToolTip="Synchronizes CPU and GPU to reduce input latency."/>
                    </StackPanel>
                </GroupBox>

                <!-- Audio Section -->
                <GroupBox Header="Audio" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <CheckBox x:Name="ChkAudioEnable" Content="Enable Audio" Margin="0,5" ToolTip="Enables audio output."/>
                        <CheckBox x:Name="ChkAudioMute" Content="Mute Audio" Margin="0,5" ToolTip="Mutes all audio."/>
                    </StackPanel>
                </GroupBox>

                <!-- Automation & Misc -->
                <GroupBox Header="Automation &amp; Behavior" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <CheckBox x:Name="ChkPauseNonActive" Content="Pause when window loses focus" Margin="0,5" ToolTip="Pauses the emulator when the window is not in focus."/>
                        <CheckBox x:Name="ChkSaveOnExit" Content="Save Configuration on Exit" Margin="0,5" ToolTip="If checked, changes made inside RA menu will be saved."/>
                        <CheckBox x:Name="ChkAutoSaveState" Content="Auto Save State on Exit" Margin="0,5" ToolTip="Automatically creates a save state when closing."/>
                        <CheckBox x:Name="ChkAutoLoadState" Content="Auto Load State on Start" Margin="0,5" ToolTip="Automatically loads the last save state when starting."/>
                        <CheckBox x:Name="ChkRewind" Content="Enable Rewind" Margin="0,5" ToolTip="Allows you to rewind gameplay in real-time."/>
                        <CheckBox x:Name="ChkRunAhead" Content="Run-Ahead" Margin="0,5" ToolTip="Reduces input lag by predicting future frames (CPU intensive)."/>
                    </StackPanel>
                </GroupBox>
                
                <!-- UI Section -->
                <GroupBox Header="User Interface" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                         <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Menu Driver:" VerticalAlignment="Center"/>
                            <ComboBox x:Name="CmbMenuDriver" Grid.Column="1" ToolTip="The visual style of the menu (Ozone is modern, XMB is PS3-style).">
                                <ComboBoxItem Content="ozone" ToolTip="Switch-like interface"/>
                                <ComboBoxItem Content="xmb" ToolTip="PS3-like interface"/>
                                <ComboBoxItem Content="rgui" ToolTip="Classic retro interface"/>
                                <ComboBoxItem Content="glui" ToolTip="Mobile-friendly interface"/>
                            </ComboBox>
                        </Grid>
                        <CheckBox x:Name="ChkAdvancedSettings" Content="Show Advanced Settings" Margin="0,5" ToolTip="Shows more complex options in the RetroArch menu."/>
                    </StackPanel>
                </GroupBox>

                <!-- RetroAchievements -->
                <GroupBox Header="RetroAchievements" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <TextBlock Text="Credentials are managed in the 'RetroAchievements Settings' window." FontStyle="Italic" Margin="0,0,0,5" TextWrapping="Wrap"/>
                        <CheckBox x:Name="ChkCheevosEnable" Content="Enable RetroAchievements" Margin="0,5" ToolTip="Enables RetroAchievements integration."/>
                        <CheckBox x:Name="ChkCheevosHardcore" Content="Hardcore Mode" Margin="0,5" ToolTip="Disables cheats/rewind to earn hardcore badges."/>
                        <CheckBox x:Name="ChkDiscordAllow" Content="Discord Rich Presence" Margin="0,5" ToolTip="Shows what you are playing on your Discord profile."/>
                    </StackPanel>
                </GroupBox>

                <CheckBox x:Name="ChkShowBeforeLaunch" 
                          Content="Open this window before launching RetroArch" 
                          Margin="5,10,0,10" FontWeight="Bold"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="BtnSave" Content="Save" Width="100" Height="35" Margin="0,0,10,0"
                    Style="{DynamicResource MahApps.Styles.Button.Square}" 
                    Click="BtnSave_Click"/>
            <Button x:Name="BtnRun" Content="Run RetroArch" Width="120" Height="35" 
                    Style="{DynamicResource MahApps.Styles.Button.Square.Accent}" 
                    Click="BtnRun_Click" IsDefault="True"/>
            <Button Content="Cancel" Width="100" Height="35" Margin="10,0,0,0" IsCancel="True"/>
        </StackPanel>
    </Grid>
</controls:MetroWindow>