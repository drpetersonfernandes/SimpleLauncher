<controls:MetroWindow x:Class="SimpleLauncher.InjectRpcs3ConfigWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      Title="{DynamicResource RPCS3Config_Title}"
                      Height="750" Width="700"
                      ResizeMode="CanResize"
                      WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Video Section -->
                <GroupBox Header="{DynamicResource RPCS3Config_Video_Header}" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="{DynamicResource RPCS3Config_Renderer_Label}" VerticalAlignment="Center"/>
                            <ComboBox x:Name="CmbRenderer" Grid.Column="1" ToolTip="{DynamicResource RPCS3Config_Renderer_Tooltip}">
                                <ComboBoxItem Content="Vulkan"/>
                                <ComboBoxItem Content="OpenGL"/>
                                <ComboBoxItem Content="Null"/>
                            </ComboBox>
                        </Grid>
                        <Grid Margin="0,5,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="{DynamicResource RPCS3Config_Resolution_Label}" VerticalAlignment="Center"/>
                            <ComboBox x:Name="CmbResolution" Grid.Column="1" IsEditable="True" ToolTip="{DynamicResource RPCS3Config_Resolution_Tooltip}">
                                <ComboBoxItem Content="1280x720"/>
                                <ComboBoxItem Content="1920x1080"/>
                                <ComboBoxItem Content="2560x1440"/>
                                <ComboBoxItem Content="3840x2160"/>
                            </ComboBox>
                        </Grid>
                        <Grid Margin="0,5,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="{DynamicResource RPCS3Config_AspectRatio_Label}" VerticalAlignment="Center"/>
                            <ComboBox x:Name="CmbAspectRatio" Grid.Column="1" ToolTip="{DynamicResource RPCS3Config_AspectRatio_Tooltip}">
                                <ComboBoxItem Content="16:9"/>
                                <ComboBoxItem Content="4:3"/>
                                <ComboBoxItem Content="Auto"/>
                            </ComboBox>
                        </Grid>
                        <Grid Margin="0,5,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="{DynamicResource RPCS3Config_ResolutionScale_Label}" VerticalAlignment="Center"/>
                            <ComboBox x:Name="CmbResolutionScale" Grid.Column="1" ToolTip="{DynamicResource RPCS3Config_ResolutionScale_Tooltip}">
                                <ComboBoxItem Content="100"/>
                                <ComboBoxItem Content="150"/>
                                <ComboBoxItem Content="200"/>
                                <ComboBoxItem Content="300"/>
                            </ComboBox>
                        </Grid>
                        <Grid Margin="0,5,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="{DynamicResource RPCS3Config_AnisotropicFilter_Label}" VerticalAlignment="Center"/>
                            <ComboBox x:Name="CmbAnisotropicFilter" Grid.Column="1" ToolTip="{DynamicResource RPCS3Config_AnisotropicFilter_Tooltip}">
                                <ComboBoxItem Content="0" ToolTip="Disabled"/>
                                <ComboBoxItem Content="2"/>
                                <ComboBoxItem Content="4"/>
                                <ComboBoxItem Content="8"/>
                                <ComboBoxItem Content="16"/>
                            </ComboBox>
                        </Grid>
                        <CheckBox x:Name="ChkVsync" Content="{DynamicResource RPCS3Config_Vsync_Checkbox}" Margin="0,5" ToolTip="{DynamicResource RPCS3Config_Vsync_Tooltip}"/>
                    </StackPanel>
                </GroupBox>

                <!-- Core Section -->
                <GroupBox Header="{DynamicResource RPCS3Config_Core_Header}" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="{DynamicResource RPCS3Config_PpuDecoder_Label}" VerticalAlignment="Center"/>
                            <ComboBox x:Name="CmbPpuDecoder" Grid.Column="1" ToolTip="{DynamicResource RPCS3Config_PpuDecoder_Tooltip}">
                                <ComboBoxItem Content="Recompiler (LLVM)"/>
                                <ComboBoxItem Content="Interpreter (static)"/>
                                <ComboBoxItem Content="Interpreter (dynamic)"/>
                            </ComboBox>
                        </Grid>
                        <Grid Margin="0,5,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="{DynamicResource RPCS3Config_SpuDecoder_Label}" VerticalAlignment="Center"/>
                            <ComboBox x:Name="CmbSpuDecoder" Grid.Column="1" ToolTip="{DynamicResource RPCS3Config_SpuDecoder_Tooltip}">
                                <ComboBoxItem Content="Recompiler (LLVM)"/>
                                <ComboBoxItem Content="Recompiler (ASMJIT)"/>
                                <ComboBoxItem Content="Interpreter (static)"/>
                                <ComboBoxItem Content="Interpreter (dynamic)"/>
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- Audio Section -->
                <GroupBox Header="{DynamicResource RPCS3Config_Audio_Header}" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="{DynamicResource RPCS3Config_AudioRenderer_Label}" VerticalAlignment="Center"/>
                            <ComboBox x:Name="CmbAudioRenderer" Grid.Column="1" ToolTip="{DynamicResource RPCS3Config_AudioRenderer_Tooltip}">
                                <ComboBoxItem Content="Cubeb"/>
                                <ComboBoxItem Content="XAudio2"/>
                                <ComboBoxItem Content="Null"/>
                            </ComboBox>
                        </Grid>
                        <CheckBox x:Name="ChkAudioBuffering" Content="{DynamicResource RPCS3Config_AudioBuffering_Checkbox}" Margin="0,5" ToolTip="{DynamicResource RPCS3Config_AudioBuffering_Tooltip}"/>
                    </StackPanel>
                </GroupBox>

                <!-- Miscellaneous Section -->
                <GroupBox Header="{DynamicResource RPCS3Config_Misc_Header}" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <CheckBox x:Name="ChkStartFullscreen" Content="{DynamicResource RPCS3Config_StartFullscreen_Checkbox}" Margin="0,5" ToolTip="{DynamicResource RPCS3Config_StartFullscreen_Tooltip}"/>
                    </StackPanel>
                </GroupBox>

                <CheckBox x:Name="ChkShowBeforeLaunch" 
                          Content="{DynamicResource RPCS3Config_ShowBeforeLaunch_Checkbox}" 
                          Margin="5,10,0,10" />
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="BtnSave" Content="{DynamicResource RPCS3Config_Save_Button}" Width="100" Height="35" Margin="0,0,10,0"
                    Style="{DynamicResource MahApps.Styles.Button.Square}" 
                    Click="BtnSave_Click"/>
            <Button x:Name="BtnRun" Content="{DynamicResource RPCS3Config_Run_Button}" Width="120" Height="35" 
                    Style="{DynamicResource MahApps.Styles.Button.Square.Accent}" 
                    Click="BtnRun_Click" IsDefault="True"/>
            <Button Content="{DynamicResource RPCS3Config_Cancel_Button}" Width="100" Height="35" Margin="10,0,0,0" IsCancel="True"/>
        </StackPanel>
    </Grid>
</controls:MetroWindow>
